@M_KOJO_IRAI_K13(ROLE, SCENE, IRAI_ID)
#DIMS ROLE     ;キャラの立場、의뢰자かそうでないか
#DIMS SCENE    ;セリフの表示されるタイミング
#DIM  IRAI_ID  ;依頼自体のID
#DIM  CLIENT_ID;의뢰자IDだけ抜き出したもの
#DIM  CHK_ID   ;依頼IDだけ抜き出したもの
CHK_ID    = IRAI_ID % 1000
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE ROLE
CASE "CLIENT"
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		CASE "일반의뢰명"
			SELECTCASE SCENE
			CASE "의뢰 제시시"
			PRINTFORMW 「저…부탁이 있어요」
			;依頼を持ちかけられる時
			CASE "의뢰비수탁시"
			PRINTFORMW 「바쁘실 때 말 걸어서 죄송해요…」
			;内容だけ見て受託しなかった時
			CASE "의뢰 수탁시"
			PRINTFORMW 「자、잘 부탁드려요」
			;依頼を受託した時
			CASE "의뢰 확인시"
			PRINTFORMW 「다시 설명해드릴게요」
			;[366]で依頼内容を依頼人に確認した時
			CASE "의뢰 파기시"
			PRINTFORMW 「바쁠 때 말 걸어서 죄송해요…」
			;受託した依頼を破棄する時
			CASE "의뢰실행 직전"
			;[367]で依頼を実行する時、実行処理の前に呼び出される
			CASE "의뢰실행 직후"
			;[367]で依頼を実行する時、実行処理の後に呼び出される
			CASE "성공 보고시"
			PRINTFORMW 「고마워요。역시 %CALLNAME:MASTER%네요」
			;報告時（成功）
			CASE "실패 보고시"
			;報告時（失敗）
			;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
			PRINTFORMW 대요정은 불안한 표정으로 이쪽을 쳐다보고 있다。
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	
	;固有依頼
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
	;個々の의뢰명で分岐
	;SCENEのWAITに関する仕様
	;WAIT無しでよい　　　　："의뢰제시시", "의뢰비수탁시", "의뢰 확인시", "의뢰 파기시", "성공 보고시", "실패 보고시"
	;
	;以下の2つは実際にはCARRYOUTでの地の文処理との比較検討が必要
	;WAITを入れたほうが適切："의뢰실행 직전", "의뢰실행 직후"
	CASE "고유 의뢰명"
	SELECTCASE SCENE
			CASE "의뢰제시시"
			;依頼を持ちかけられる時
			PRINTFORMW 「저…부탁이 있어요」
			CASE "의뢰비수탁시"
			;内容だけ見て受託しなかった時
			PRINTFORMW 「죄、죄송해요…」
			CASE "의뢰 수탁시"
			;依頼を受託した時
			PRINTFORMW 「잘 부탁드려요」
			CASE "의뢰 확인시"
			;[366]で依頼内容を依頼人に確認した時
			;PRINTFORMW 「요즘 치르노가 열심히 아이스크림을 팔고 있어요」
			;PRINTFORMW 「저한텐 혼자서도 괜찮아！라고 말을 하긴 했지만 걱정이 되서…」
			;PRINTFORMW 「괜찮으시다면 상황을 봐줄 수 있으신가요？」
			;PRINTFORMW 「아 그리고, 치르노가 파는 아이스크림을 사오셨으면 좋겠어요」
			;PRINTFORMW 「조금이라도 치르노의 매출이 됐으면 좋겠다고 생각해서…」
			CASE "의뢰 파기시"
			;受託した依頼を破棄する時
			CASE "의뢰실행 직전"
			;[367]で依頼を実行する時、実行処理の前に呼び出される
			CASE "의뢰실행 직후"
			;[367]で依頼を実行する時、実行処理の後に呼び出される
			CASE "성공 보고시"
			;PRINTFORMW 「…그런가요。치르노는 괜찮은 것 같네요」
			;PRINTFORMW 「다행이다…언제나 내 앞에서는 괜찮은 척만 해서 걱정이었는데…」
			;PRINTFORMW 「정말 고마워요。이거, 아이스크림 가격이에요」
			;報告時（成功）
			CASE "실패 보고시"
			;報告時（失敗）
			;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
			PRINTFORMW  「…바쁘셨나보네요。제멋대로 부탁해서 죄송해요」
			ENDSELECT
	ENDSELECT
CASE "TARGET"
	;ここで表示されるSCENEは"의뢰실행 직전", "의뢰실행 직후"だけです
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		;個々の의뢰명で分岐してください
		CASE "일반의뢰명"
		;人物が鍵になっていた・もしくは場所にたまたま居合わせた
			SELECTCASE SCENE
			;TARGETが呼ばれるのはこのタイミングだけ
			CASE "의뢰실행 직전"
			CASE "의뢰실행 직후"
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE CSVCALLNAME(CLIENT_ID)
	;의뢰자のCALLNAMEによる分岐（CSV準拠）
	CASE "의뢰자"
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		CASE "고유 의뢰명"
			SELECTCASE SCENE
			CASE "의뢰실행 직전"
			CASE "의뢰실행 직후"
			ENDSELECT
		ENDSELECT
	ENDSELECT
CASE "NO_REPORT"
	;日数経過時、報告不要依頼を達成していた場合に呼ばれる口上
	;ここで表示されるSCENEは"의뢰 보고 불필요"だけです
	;SCENEが一つしか無いので分岐は不要
	;また、必ず依頼主の口上が呼ばれます
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		;個々の의뢰명で分岐してください
		CASE "일반의뢰명"
		CASE "꽃에 물을 줘"
		CASE "누군가의 유실물"
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
	CASE "고유 의뢰명"
	ENDSELECT
ENDSELECT
