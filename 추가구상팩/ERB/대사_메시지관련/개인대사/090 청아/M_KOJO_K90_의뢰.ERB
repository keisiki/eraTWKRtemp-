@M_KOJO_IRAI_K90(ROLE, SCENE, IRAI_ID)
#DIMS ROLE     ;キャラの立場、의뢰자かそうでないか
#DIMS SCENE    ;セリフの表示されるタイミング
#DIM  IRAI_ID  ;依頼自体のID
#DIM  CLIENT_ID;의뢰자IDだけ抜き出したもの
#DIM  CHK_ID   ;依頼IDだけ抜き出したもの
CHK_ID    = IRAI_ID % 1000
CLIENT_ID = IRAI_ID_TO_CLIENT(IRAI_ID)
SELECTCASE ROLE
CASE "CLIENT"
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		CASE "일반의뢰명"
			SELECTCASE SCENE
			CASE "의뢰 제시시"
			;依頼を持ちかけられる時
			CASE "의뢰비수탁시"
			;内容だけ見て受託しなかった時
			CASE "의뢰 수탁시"
			;依頼を受託した時
			CASE "의뢰 확인시"
			;[366]で依頼内容を依頼人に確認した時
			CASE "의뢰 파기시"
			;受託した依頼を破棄する時
			CASE "의뢰실행 직전"
			;[367]で依頼を実行する時、実行処理の前に呼び出される
			CASE "의뢰실행 직후"
			;[367]で依頼を実行する時、実行処理の後に呼び出される
			CASE "성공 보고시"
			;報告時（成功）
			CASE "실패 보고시"
			;報告時（失敗）
			;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	
	;固有依頼
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
	;個々の의뢰명で分岐
	;SCENEのWAITに関する仕様
	;WAIT無しでよい　　　　："의뢰 제시시", "의뢰비수탁시", "의뢰 확인시", "의뢰 파기시", "성공 보고시", "실패 보고시"
	;
	;以下の2つは実際にはCARRYOUTでの地の文処理との比較検討が必要
	;WAITを入れたほうが適切："의뢰실행 직전", "의뢰실행 직후"
	CASE "고유 의뢰명"
		SELECTCASE SCENE
		CASE "의뢰 제시시"
		;依頼を持ちかけられる時
		CASE "의뢰비수탁시"
		;内容だけ見て受託しなかった時
		CASE "의뢰 수탁시"
		;依頼を受託した時
		CASE "의뢰 확인시"
		;[366]で依頼内容を依頼人に確認した時
		CASE "의뢰 파기시"
		;受託した依頼を破棄する時
		CASE "의뢰실행 직전"
		;[367]で依頼を実行する時、実行処理の前に呼び出される
		CASE "의뢰실행 직후"
		;[367]で依頼を実行する時、実行処理の後に呼び出される
		CASE "성공 보고시"
		;報告時（成功）
		CASE "실패 보고시"
		;報告時（失敗）
		;この他、報告忘れや期限切れで失敗扱いになり後日依頼人に遭遇した際にも表示
		ENDSELECT
	ENDSELECT
CASE "TARGET"
	;ここで表示されるSCENEは"의뢰실행 직전", "의뢰실행 직후"だけです
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		;個々の의뢰명で分岐してください
		CASE "일반의뢰명"
		;人物が鍵になっていた・もしくは場所にたまたま居合わせた
			SELECTCASE SCENE
			;TARGETが呼ばれるのはこのタイミングだけ
			CASE "의뢰실행 직전"
			CASE "의뢰실행 직후"
			ENDSELECT
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE CSVCALLNAME(CLIENT_ID)
	;의뢰자のCALLNAMEによる分岐（CSV準拠）
	CASE "의뢰자"
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		CASE "고유 의뢰명"
			SELECTCASE SCENE
			CASE "의뢰실행 직전"
			CASE "의뢰실행 직후"
			ENDSELECT
		ENDSELECT
	ENDSELECT
CASE "NO_REPORT"
	;日数経過時、報告不要依頼を達成していた場合に呼ばれる口上
	;ここで表示されるSCENEは"依頼報告不要"だけです
	;SCENEが一つしか無いので分岐は不要
	;また、必ず依頼主の口上が呼ばれます
	;一般依頼
	IF IS_COMMON_IRAI(IRAI_ID)
		SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
		;個々の의뢰명で分岐してください
		CASE "일반의뢰명"
		CASE "꽃에 물을 줘"
		CASE "누군가의 유실물"
		ENDSELECT
		RETURN
	ENDIF
	SELECTCASE STR_DATA_IRAI(IRAI_ID, "의뢰명", CLIENT_ID)
	CASE "고유 의뢰명"
	ENDSELECT
ENDSELECT
