;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K94_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:대사색깔
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「혼내주겠어…！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「 나의 실력, 보여 줄게요！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「 나의 상대가 될까？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「너의 상대는 나다！」
		ELSE
			PRINTFORMW 「 나의 음악의 상대가 될까♪」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「이…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「 아직 끝나지 않았어요！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「스쳤을 뿐이야！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「이 정도는！」
				ELSE
					PRINTFORMW 「헷, 아직이야！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「이 정도는 귀엽지！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「내가 따라잡혔다고！？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「의외로 수준이 아닌데?!」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「 이제 남은 건…」
				ELSE
					PRINTFORMW 「적당히 끝내드리죠！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…나쁜 사람…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…당했어요」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「졌군요…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「맙소사…」
				ELSE
					PRINTFORMW 「…강하다」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「하, 흥신소 놀이라도 하려던 걸 까?」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「이정도면 내가 최강에 한 걸음 더 다가간 걸까？」
				ELSEIF RAND:3 == 0
					PRINTFORM 「뭐야, 약하네,
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「-응, 의외로 별 거 아니네」
				ELSE
					PRINTFORMW 「끝？맥 빠지네요」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「애 먹이기는…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…노 미스는 못 했네요…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「아아, 최고의 결과는 아니었네요」
				ELSEIF RAND:2 == 0
					PRINTFORM 「,
					CALL MASTER_CALLNAME_K94
					PRINTFORMW , 최선을 다한 게 맞을까？」
				ELSE
					PRINTFORMW 「 날 좀 더 즐겁게 해줬으면 했는데」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「진 빠져…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「아슬아슬했다…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …의외로 강해요…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…통…」
				ELSE
					PRINTFORMW 「아직도 진짜 강자의 자리에는 먼 걸까…」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「당신이 싫어요,
					CALL MASTER_CALLNAME_K94
					PRINTFORMW ,…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「응,그만 그만, 항복이야―」
				ELSEIF RAND:3 == 0
					PRINTFORM 「탄막놀이에서 
					CALL MASTER_CALLNAME_K94
					PRINTFORMW , 쉬운 상대가 아니네요…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「 나는 아직 멀었나…」
				ELSE
					PRINTFORMW 「다음번은 야츠하시도 데려 올까？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

