;-----------------------------------------------------------
;동일 캐릭터 구상 둘 이상 확인
;ARG=캐릭터번호
;현재 동일 캐릭터 구상은 최대 4개까지 상정
;-----------------------------------------------------------
@KOJO_MULTIPLE(C_ID)
#DIM C_ID
#DIM DYNAMIC 구상카운트
#DIM DYNAMIC 구상수
#DIM DYNAMIC 구상실장수
;동일 캐릭터 구상 둘 이상 확인
FOR 구상카운트,0,5
	IF 구상카운트
		RESULT = 0
		TRYCALLFORM M_KOJO_K{C_ID}_{구상카운트}
		IF RESULT
			IF !GETBIT(CFLAG:C_ID:대사실장상황,구상카운트)
				구상수 += 1
				구상실장수 += 1
				SETBIT CFLAG:C_ID:대사실장상황,구상카운트
			ELSEIF GETBIT(CFLAG:C_ID:대사실장상황,구상카운트)
				구상실장수 += 1
			ENDIF
		ENDIF
	ELSE
		TRYCALLFORM M_KOJO_K{C_ID}
		IF RESULT
			IF !GETBIT(CFLAG:C_ID:대사실장상황,구상카운트)
				구상수 += 1
				구상실장수 += 1
				SETBIT CFLAG:C_ID:대사실장상황,구상카운트
			ELSEIF GETBIT(CFLAG:C_ID:대사실장상황,구상카운트)
				구상실장수 += 1
			ENDIF
		ELSE
			CFLAG:C_ID:대사실장상황 = 0
		ENDIF
	ENDIF
	SIF !RESULT
		BREAK
NEXT
;구상 존재 판정
IF 구상수
	;신규 별인구상추가
	IF 구상실장수 > 1
		RESULTS:1 = 
		;구상명의 보존 및 구현 현황 덮어쓰기
		FOR 구상카운트,0,구상실장수 + 1
			IF 구상카운트
				RESULT = 0
				TRYCALLFORM M_KOJO_K{C_ID}_{구상카운트}
			ELSE
				TRYCALLFORM M_KOJO_K{C_ID}
			ENDIF
			SIF !RESULT
				BREAK
			SIF RESULTS:1 == ""
				RESULTS:1 = 초기
			IF RESULT
				LOCALS:(구상카운트 + 1) = %CALLNAME:C_ID%%RESULTS:1%구상
				RESULT = 0
			ENDIF
		NEXT
		PRINTFORML %CALLNAME:C_ID%에게는 복수의 구상이 존재합니다
		PRINTFORML 변경하시겠습니까?
		CALL ASK_YN
		;구상선택
		IF !RESULT
			LOCALS:0 = 어떤 구상을 사용할까요?
			CALL CHOICE(LOCALS:0, LOCALS:1, LOCALS:2, LOCALS:3, LOCALS:4)
			CFLAG:C_ID:구상셀렉터 = RESULT
			RETURN 2
		ELSE
			PRINTFORML 변경하지 않았습니다
			RETURN 1
		ENDIF
	ELSE
		RETURN 2
	ENDIF
ENDIF
SIF 구상실장수
	RETURN 1
RETURN 0
