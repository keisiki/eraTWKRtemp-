@USERSHOP
;기상
IF RESULT == 100
	BEGIN TRAIN
	RETURN 1
ELSEIF RESULT == 410
	CALL SHOW_GATHERING_LIST
;능력표시
ELSEIF RESULT == 101
	DEBUGCLEAR
	CALL SHOW_CHARA_LIST("존재하는 캐릭터리스트", "체력 기력", "「정보 표시」 「조건 변경」")
;	CALL SHOW_CHARADATA
;콜렉션
ELSEIF RESULT == 106 && FLAG:700 && !FLAG:기절중단
	CALL SHOW_COLLECTION
;통신 판매
ELSEIF RESULT == 103 && !FLAG:기절중단
	CALL ITEM_BUY
;설정
ELSEIF RESULT == 102 && !FLAG:기절중단
	CALL SCHEDULE
ELSEIF RESULT == 104
	CALL SHOW_ALLITEM
ELSEIF RESULT == 105 && !FLAG:기절중단
	CALL BONUS
ELSEIF RESULT == 107 && !FLAG:기절중단
	CALL IRAI_RESET
ELSEIF RESULT == 108
	CALL SHOW_COLLECTION_SCORE
ELSEIF RESULT == 109
	CALL SHOW_COLLECTION_FISH
ELSEIF RESULT == 110 && CFLAG:MASTER:현재위치 != OMANEKIBEYA()&& !FLAG:기절중단
	CALL SET_MAINHOME
ELSEIF RESULT == 111
	CALL SHOW_COLLECTION_GIFT
;KR판 저택용
ELSEIF RESULT == 114 && !FLAG:기절중단 && MAIN_MAP==14
	CALL 주거설정함수
;SAVE
ELSEIF RESULT == 200
	SAVEGAME
;LOAD
ELSEIF RESULT == 300
	LOADGAME
;OPTION
ELSEIF RESULT == 400
	CALL OPTION
ELSEIF RESULT == 420
	CALL TUTORIAL_MAIN
ELSEIF RESULT == 500
	CALL UPDATE
ELSEIF RESULT == 600
	CALL CM_BALANCE
ELSEIF RESULT == 700
	CALL RESET_ALL_CLOTHES
ELSEIF RESULT == 777
    CALL CHEATS
ELSEIF RESULT == 2400
	CALL 기상시간설정()
ENDIF


