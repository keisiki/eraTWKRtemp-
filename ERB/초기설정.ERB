	CALL ITEMDATA(LOCAL, "SHOP:식료품점")
	RESULT:1 = RESULT
	CALL ITEMDATA(LOCAL, "SHOP:술집")
	RESULT:2 = RESULT
	CALL ITEMDATA(LOCAL, "SHOP:꽃집")
	RESULT:3 = RESULT
	CALL ITEMDATA(LOCAL, "SHOP:야채가게")
	RESULT:4 = RESULT
	IF RESULT:1 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 10
	ELSEIF RESULT:2 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 5
	ELSEIF RESULT:3 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 3
	ELSEIF RESULT:4 && !ITEMSALES:LOCAL
		ITEMSALES:LOCAL = 5
	ENDIF
NEXT

