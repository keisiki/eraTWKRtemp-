;카운터 하반신탈의
;인수 0	참조하는 캐릭터 번호
;인수 1	0=전부탈 
;		1=속옷만 탈바지를 신고 있었을 경우는 전부탈속옷을 신지 않았던 경우도 전부탈
;		2=윗도리만 탈윗도리를 입지 않은 경우는 전부탈
@DATUI_BOTTOM(ARG, ARG:1)

ARG:1 = DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)

SELECTCASE ARG:1
	;전부탈
	CASE 0
		TCVAR:ARG:22 = 1
	;속옷만 탈
	CASE 1
		TCVAR:ARG:22 = 2
	;윗도리만 탈
	CASE 2
		TCVAR:ARG:22 = 3
ENDSELECT

@DATUI_BOTTOM_T(ARG, ARG:1)

ARG:1 = DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)

IF !TEQUIP:ARG:체위
	SELECTCASE ARG:1
		;전부탈
		CASE 0
			TCVAR:ARG:23 = 1
		;속옷만 탈
		CASE 1
			TCVAR:ARG:23 = 2
		;윗도리만 탈
		CASE 2
			TCVAR:ARG:23 = 3
	ENDSELECT
ENDIF

;벌써 벗고 있었을 경우의 수정
;메시지내의 분기를 줄이고 싶다
@DATUI_BOTTOM_OPTIMIZE(ARG, ARG:1)
#FUNCTION
SELECTCASE ARG:1
	;속옷만 탈
	CASE 1	
		;바지를 신고 있었을 경우는 전부탈
		IF TEQUIP:ARG:0 & 8
			ARG:1 = 0
		;속옷을 신지 않은 경우는 전부탈
		ELSEIF (TEQUIP:ARG:0 & 6) == 0
			ARG:1 = 0
		ENDIF
	;윗도리만 탈
	CASE 2
		;윗도리를 입지 않은 경우는 전부탈
		SIF (TEQUIP:ARG:0 & 9) == 0
			ARG:1 = 0
ENDSELECT
RETURNF ARG:1

