;*********************************************************************************************
;カウンターコマンド：尻ズリ
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF28(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_RESET_T(ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:유혹 += 200
	SOURCE:ARG:강요 += 200
	SOURCE:ARG:정복 += 400
	SOURCE:ARG:쾌C += 50
	TCVAR:ARG:기학플래그 = 1

	;マスターカウンター制御
	;=============================
	;なし

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE28(ARG)

	SIF !(TALENT:ARG:2 & 2)
		RETURN 0
	SIF TFLAG:64
		RETURN 0
	SIF BASE:ARG:발기 < 500
		RETURN 0
	SIF TEQUIP:MASTER:50 >= 0 || TEQUIP:MASTER:51 >= 0
		RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER28(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 소프트

	;実行判定値算出式
	;=============================
	LOCAL = (기본치*10/8) + CFLAG:ARG:적극성 + CFLAG:ARG:질 - CFLAG:ARG:수줍음 + MAX(EXP:ARG:사정경험 / 15, 8)

	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
