;*********************************************************************************************
;カウンターコマンド：飴強奪
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF39(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)

	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:성행동 += 100
	SOURCE:ARG:유혹 += 150
	SOURCE:ARG:강요 += 150
	SOURCE:ARG:정복 += 200
	SOURCE:PLAYER:쾌M += 150
	EXP:ARG:키스경험 ++
	EXP:ARG:펠라티오경험 ++
	EXP:MASTER:키스경험 ++
	EXP:MASTER:펠라티오경험 ++
	TCVAR:MASTER:엿 = 0
	DOWNBASE:기력 -= 50

	;マスターカウンター制御
	;(ビット立ちで不可 0=엉덩이를 쓰다듬는다 1=껴안는다 2=키스한다 3=가슴애무 4=애널애무 5=클리애무 6=指挿入れ 7=치마를 넘긴다)
	;=============================
	CALL 카운터삽입됨지속처리(ARG)

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ABLE39(ARG)

	;どういうことなのかわからないので除外しておく
	SIF TFLAG:60
		RETURN 0
	SIF TEQUIP:MASTER:체위 == 2
		RETURN 0
	RETURN 0

RETURN 1

;*********************************************************************************************
;カウンター実行判定値算出関数
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOM_ORDER39(커맨드번호, ARG, 기본치)
#DIM 커맨드번호
#DIM 기본치
#DIMS 카운터타입

	;카운터타입設定
	;=============================
	카운터타입 = 착의

	;実行判定値算出式
	;=============================
	LOCAL = (기본치 + CFLAG:ARG:적극성 + CFLAG:ARG:질) * !TALENT:ARG:키스미경험

	;카운터타입別計算処理 実質実行判定処理を含む
	;=============================
	LOCAL = MAX(LOCAL + COUNTER_SIKOU:ARG:커맨드번호, 1)
	LOCAL *= COUNTER_TYPE(카운터타입, ARG)

RETURN LOCAL
