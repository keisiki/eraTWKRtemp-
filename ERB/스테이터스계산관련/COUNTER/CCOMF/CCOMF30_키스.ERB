;*********************************************************************************************
;カウンターコマンド：キス
;ARG = 対象のキャラ番号
;*********************************************************************************************
@CCOMF30(ARG)

	;몸의자세の変更
	;=============================
	CALL TOUCH_SET(SET_FROM_M,4,ARG)
	TFLAG:MASTER의입사용중 ++
	
	;ソース計算および内部処理系統
	;=============================
	SOURCE:ARG:유혹 += 250
	SOURCE:ARG:정복 += 100
	SOURCE:ARG:쾌M += 100
	SOURCE:PLAYER:쾌M += 100
	SOURCE:ARG:봉사 += 50
	EXP:ARG:키스경험 ++
	EXP:MASTER:키스경험 ++

	;マスターカウンター制御
	;=============================
	CALL 카운터삽입됨지속처리(ARG)

RETURN 1

;*********************************************************************************************
;カウンター実行可否出力関数
