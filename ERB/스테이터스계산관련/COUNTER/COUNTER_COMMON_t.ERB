;***************************************************************************
;위치관계確認共通関数
;ARG =  위치관계
;***************************************************************************
@POSITION_OCCUPATION(ARG)
#FUNCTION
FOR LOCAL, 1, GET_TARGETNUM() + 1
	SIF TARGET:LOCAL <= 0
		CONTINUE
	SIF TCVAR:(TARGET:LOCAL):위치관계 == ARG
		RETURNF 1
NEXT