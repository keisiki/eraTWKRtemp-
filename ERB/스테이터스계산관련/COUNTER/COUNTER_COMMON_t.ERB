;************************************************************
;カウンター時식스나인移行共通処理
;引数1 対象の캐릭터번호 2 식스나인移行への確率
;************************************************************
@EVENT_COUNTER_POSE_69(ARG,ARG:2)
IF ARG:2 == 0
	TEQUIP:ARG:식스나인 = 0
	RETURN 0
ENDIF
IF TEQUIP:ARG:식스나인
	TFLAG:60 ++
	RETURN 0
ENDIF
SIF TFLAG:60
	RETURN 0
IF RAND:(ARG:2) == 1
	TEQUIP:ARG:식스나인 = 1
	TCVAR:ARG:27 = 1
ENDIF

;**************************************************************************
;カウンター中の挿入継続共通処理
;ARG = 캐릭터번호
;**************************************************************************
@카운터삽입지속처리(ARG)
;당신에게 V삽입중에서, 이번 카운터 커맨드가 V삽입계 이외의경우
IF TEQUIP:PLAYER:50 == ARG && !GROUPMATCH(TCVAR:ARG:20, 80, 83, 84) && CFLAG:ARG:우후후 == 2
	CALL TOUCH_SET(SET_FROM_P, SET_V, ARG)
	SOURCE:ARG:성행동 += 150
	SOURCE:ARG:정복 += 400
	SOURCE:PLAYER:액체 += 100
	SOURCE:ARG:가학 += 250
	SOURCE:ARG:강요 += 400
	SOURCE:PLAYER:쾌V += 500
	CALL PAIN_CHECK_V_MASTER(ARG)
	LOCALS = {ARG}/
	CSTR:PLAYER:10 += LOCALS
	TCVAR:PLAYER:2 = 13
	TCVAR:PLAYER:4 += 75
	LOCALS = {PLAYER}/
	CSTR:ARG:10 += LOCALS
	TCVAR:ARG:2 = 1
	TCVAR:ARG:4 += 500
	STAIN:ARG:2 |= STAIN:PLAYER:6
	STAIN:PLAYER:6 |= STAIN:ARG:2
	EXP:PLAYER:V성교경험 ++
	TCVAR:ARG:기학플래그 = 1
ENDIF

;당신에게 A삽입중에서, 이번 카운터 커맨드가 역A계 이외의경우
IF TEQUIP:PLAYER:51 == ARG && !GROUPMATCH(TCVAR:ARG:20, 90, 93, 94) && CFLAG:ARG:우후후 == 2
	CALL TOUCH_SET(SET_FROM_P, SET_A, ARG)
	SOURCE:ARG:성행동 += 150
	SOURCE:ARG:정복 += 400
	SOURCE:PLAYER:액체 += 100
	SOURCE:ARG:가학 += 400
	SOURCE:ARG:강요 += 400
	SOURCE:PLAYER:쾌A += 500
	CALL PAIN_CHECK_A_MASTER(ARG)
	LOCALS = {ARG}/
	CSTR:PLAYER:10 += LOCALS
	TCVAR:PLAYER:2 = 12
	TCVAR:PLAYER:4 += 125
	LOCALS = {PLAYER}/
	CSTR:ARG:10 += LOCALS
	TCVAR:ARG:2 = 2
	TCVAR:ARG:4 += 400
	STAIN:ARG:2 |= STAIN:PLAYER:6
	STAIN:PLAYER:6 |= STAIN:ARG:2
	EXP:PLAYER:A성교경험 ++
	TCVAR:ARG:기학플래그 = 1
ENDIF
RETURN 1

;**************************************************************************
;射精対象登録共通処理
;ARG = 射精するキャラ
;ARG:1 = 射精されるキャラ
;ARG:2 = 射精箇所（1=膣内 2=アナル 3=手淫 4=口淫 5=パイズリ 6=素股 7=足コキ 8=体表 9=アナル奉仕 10=道具 11=触手 12=Ａ責め 13=Ｖ責め）
;**************************************************************************
@사정대상등록(ARG, ARG:1, ARG:2)
