@사정절정표기(ARG)
#DIM C절정회수
#DIM V절정회수
#DIM A절정회수
#DIM B절정회수
#DIM M절정회수
#DIM 동시절정보정
#DIM 개행판정
#DIM 접속판정
#DIMS 이름표기

IF ARG == MASTER
	이름표기 = 
ELSE
	이름표기 = (%CALLNAME:ARG%)
ENDIF

;●---절정의 표기---●
IF NOWEX:ARG:오중절정
	동시절정보정 = 16
ELSEIF NOWEX:ARG:사중절정
	동시절정보정 = 8
ELSEIF NOWEX:ARG:삼중절정
	동시절정보정 = 4
ELSEIF NOWEX:ARG:이중절정
	동시절정보정 = 2
ELSE
	동시절정보정 = 1
ENDIF

C절정회수 = NOWEX:ARG:C절정 / 동시절정보정
V절정회수 = NOWEX:ARG:V절정 / 동시절정보정
A절정회수 = NOWEX:ARG:A절정 / 동시절정보정
B절정회수 = NOWEX:ARG:B절정 / 동시절정보정
M절정회수 = NOWEX:ARG:M절정 / 동시절정보정

SETCOLOR C_PINK
개행판정 = 0
LOCALS:0 = 
LOCALS:1 = 
LOCALS:2 = 
IF C절정회수 > 2
	LOCALS:2 += "C"
ELSEIF C절정회수 > 1
	LOCALS:1 += "C"
ELSEIF C절정회수 > 0
	LOCALS:0 += "C"
ENDIF
IF V절정회수 > 2
	LOCALS:2 += "V"
ELSEIF V절정회수 > 1
	LOCALS:1 += "V"
ELSEIF V절정회수 > 0
	LOCALS:0 += "V"
ENDIF
IF A절정회수 > 2
	LOCALS:2 += "A"
ELSEIF A절정회수 > 1
	LOCALS:1 += "A"
ELSEIF A절정회수 > 0
	LOCALS:0 += "A"
ENDIF
IF B절정회수 > 2
	LOCALS:2 += "B"
ELSEIF B절정회수 > 1
	LOCALS:1 += "B"
ELSEIF B절정회수 > 0
	LOCALS:0 += "B"
ENDIF
IF M절정회수 > 2
	LOCALS:2 += "M"
ELSEIF M절정회수 > 1
	LOCALS:1 += "M"
ELSEIF M절정회수 > 0
	LOCALS:0 += "M"
ENDIF
IF LOCALS:0 != "" || LOCALS:1 != "" || LOCALS:2 != ""
	PRINT 《
	접속판정 = 0
	IF LOCALS:2 != ""
		PRINTFORM %LOCALS:2%초강절정
		접속판정 = 1
	ENDIF
	IF LOCALS:1 != ""
		IF 접속판정
			PRINT /
		ENDIF
		PRINTFORM %LOCALS:1%강절정
		접속판정 = 1
	ENDIF
	IF LOCALS:0 != ""
		IF 접속판정
			PRINT /
		ENDIF
		PRINTFORM %LOCALS:0%절정
	ENDIF
	PRINT 》
	개행판정 = 1
ENDIF
SIF SYNCED_ORGASM(ARG) && !FLAG:70
	CALL COLORMESSAGE(@"＜동시절정＞（호감도, 소스 입수량 증가）",C_YELLOW)

;●---사정의 표기---●
SETCOLOR C_CREAM
IF NOWEX:ARG:사정
	PRINT 【
	SELECTCASE TCVAR:ARG:12
		CASE 1
			PRINT 질내
		CASE 2
			PRINT 항내
		CASE 4
			PRINT 입안
		CASE 5
			PRINT 유내
		CASE 12
			PRINT A고문
		CASE 13
			PRINT 질고문
	ENDSELECT
	SIF NOWEX:ARG:사정 > 2
		PRINT 초과
	SIF NOWEX:ARG:사정 > 1
		PRINT 대량
	SIF TALENT:ARG:농후정액
		PRINT 농후
	PRINT 사정】
	개행판정 = 1
ENDIF

RESETCOLOR

SIF 개행판정
	PRINTFORML %이름표기%

IF ARG == MASTER
	FOR LOCAL,1,CHARANUM
		CALL ADDICTION_SHOW(LOCAL, "질내사정보정", "질내사정중독")
		CALL ADDICTION_SHOW(LOCAL, "항내사정보정", "항내사정중독")
		CALL ADDICTION_SHOW(LOCAL, "구강사정보정", "정액중독")
	NEXT
ENDIF

