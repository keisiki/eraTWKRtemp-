;FileName_ATTITUDE.ERB --------------------------------- Rev1. 00
;캐릭터의 태도
;CALL		USER
;ARG		VOID
;RETURN		VOID
;COMMENT	
;-----------------------------------------------------------
@CHARA_ATTITUDE
VARSET LOCAL
FOR LOCAL,1,CHARANUM
	SELECTCASE CFLAG:LOCAL:호감도
		CASE IS < 1000
			LOCAL:1 = 0
		CASE 1001 TO 3000
			LOCAL:1 = 50
		CASE 3001 TO 5000
			LOCAL:1 = 75
		CASE 5001 TO 10000
			LOCAL:1 = 100
		CASE 10001 TO 30000
			LOCAL:1 = 150
		CASE 30001 TO 50000
			LOCAL:1 = 200
		CASEELSE
			LOCAL:1 = 300
	ENDSELECT
	SELECTCASE CFLAG:LOCAL:신뢰도
		CASE IS < 100
			LOCAL:1 -= 50
		CASE 101 TO 300
			LOCAL:1 -= 20
		CASE 301 TO 500
			LOCAL:1 += 0
		CASE 501 TO 750
			LOCAL:1 += 30
		CASE 751 TO 1000
			LOCAL:1 += 50
		CASEELSE
			LOCAL:1 += 100
	ENDSELECT
	;함락 소질에 의한 수정
	LOCAL:1 += TALENT:LOCAL:연모 * 100 + TALENT:LOCAL:사모 * 30 + TALENT:LOCAL:애욕 * 80 + TALENT:LOCAL:섹프 * 30
	;ABL에 의한 수정
	LOCAL:1 += MIN(ABL:LOCAL:친밀, 20) * 10 + MIN(ABL:LOCAL:욕망, 20) * 5
	;PALAM에 의한 수정(함께 최대 15 LV)
	LOCAL:1 += GETPALAMLV(PALAM:LOCAL:욕정,15) * 5 + GETPALAMLV(PALAM:LOCAL:호의,15) * 5
	;무드와 이성의 밤수정
	LOCAL:1 += BASE:LOCAL:무드 / 25 + (1000 - BASE:LOCAL:이성) / 25
	;각인에 의한 수정
	LOCAL:1 += MARK:LOCAL:괘씸각인 * 20 + MARK:LOCAL:쾌락각인 * 20
	LOCAL:1 -= MIN(MARK:LOCAL:반발각인 - MARK:LOCAL:시간각인 , 0) * 30
	;약
	IF TCVAR:LOCAL:발정
		LOCAL:1 += 50
	ELSEIF TCVAR:LOCAL:춘약 || TCVAR:LOCAL:미약
		LOCAL:1 += 30
	ENDIF
	IF IsGardenValid(LOCAL)
		LOCAL:1 += 40
	ELSEIF IsInsenceValid(LOCAL)
		LOCAL:1 += 30
	ENDIF

	;남성기피
	SIF OTOKOGIRAI(LOCAL)
		LOCAL:1 -= 70
	;동성으로 양도가 아닌 경우, 태도가 2이상이 되기 어렵다
	;코멘트에 따른 조건에 개조, 덧붙여 양성은 동성 취급
	IF TALENT:LOCAL:성별기호 != -1 && HETEROSEX(MASTER, LOCAL)
			IF LOCAL:1 < 150
				LOCAL:1 += 20
			ELSEIF LOCAL:1 > 200
				LOCAL:1 -= 30
			ENDIF
		;ENDIF
	ENDIF
	SIF TALENT:LOCAL:걸레
		LOCAL:1 += 400
	SIF CFLAG:LOCAL:억지로질내사정
		LOCAL:1 -= 100
	SIF LOCAL:1 >= 100 && FLAG:생활능력무
		LOCAL:1 += 50
	CFLAG:LOCAL:합의판정 = LOCAL:1
	SELECTCASE CFLAG:LOCAL:합의판정
		CASE IS >= 500
			CFLAG:LOCAL:태도 = 3
		CASE IS >= 300
			CFLAG:LOCAL:태도 = 2
		CASE IS >= 150
			CFLAG:LOCAL:태도 = 1
		CASEELSE
			CFLAG:LOCAL:태도 = 0
	ENDSELECT
	SIF CFLAG:LOCAL:빡침 && !FLAG:70
		CFLAG:LOCAL:태도 = 0
	SIF CFLAG:LOCAL:수면
		CFLAG:LOCAL:태도 = 0
NEXT

