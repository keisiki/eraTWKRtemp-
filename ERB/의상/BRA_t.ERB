@DECIDE_NOBRA(ARG)
#FUNCTION
#DIM DYNAMIC NOBRA_RATE
SIF (TALENT:ARG:걸레 || TALENT:ARG:소악마 || TALENT:ARG:섹프 || ABL:ARG:노출벽 >= 4) && !RAND:5
	RETURNF 1
SIF TALENT:ARG:모유체질 && !(TALENT:ARG:섹프 || TALENT:ARG:애욕 || ABL:ARG:노출벽 >= 4)
	RETURNF 0
;DAY:2 계절(1=춘 2=하 3=추 4=동)
SELECTCASE DAY:2
CASE 1
	NOBRA_RATE = 8
CASE 2
	NOBRA_RATE = 15
CASE 3
	NOBRA_RATE = 3
CASE 4
	NOBRA_RATE = 1
ENDSELECT

SIF TALENT:ARG:유치 || TALENT:ARG:애같음
	TIMES NOBRA_RATE, 1.20
SIF TALENT:ARG:도착적
	TIMES NOBRA_RATE, 1.20
SIF TALENT:ARG:소악마
	TIMES NOBRA_RATE, 1.20
SIF TALENT:ARG:마조
	TIMES NOBRA_RATE, 1.80
SIF TALENT:ARG:걸레
	TIMES NOBRA_RATE, 2.00

{
	NOBRA_RATE = NOBRA_RATE * 
				(10 + TALENT:ARG:성적흥미 + TALENT:ARG:자기애 + TALENT:ARG:쾌감응답 
					- TALENT:ARG:B감도 - TALENT:ARG:정조 - TALENT:ARG:수치심 - TALENT:ARG:가슴사이즈 ) / 10
}

SIF TALENT:ARG:키스미경험
	TIMES NOBRA_RATE, 0.30
SIF GET_TALENTNAME(GETNUM(TALENT, "담력"), TALENT:ARG:담력) == "겁장이"
	TIMES NOBRA_RATE, 0.50
SIF GET_TALENTNAME(GETNUM(TALENT, "자존심"), TALENT:ARG:자존심) == "자존심 높음"
	TIMES NOBRA_RATE, 0.50

RETURNF RAND:100 <= NOBRA_RATE

