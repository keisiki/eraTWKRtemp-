	RETURNF 0
SIF !GETBIT(TALENT:MASTER:2,1) && HETEROSEX(MASTER,ARG)
	RETURNF 0
SIF TALENT:ARG:수치심 < 0 && ABL:ARG:친밀 >= 5
	RETURNF 0
SIF CFLAG:ARG:우후후
	RETURNF 0
