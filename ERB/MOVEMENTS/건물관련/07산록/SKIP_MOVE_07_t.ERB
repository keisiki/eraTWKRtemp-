@SKIP_MOVE_7(ARG, ARG:1)
;LOCAL 일람
;0	현재위치

;현재위치 취득
LOCAL = CFLAG:MASTER:현재위치
SIF ARG:1
	LOCAL = ARG:1
;잠정 목적지에 직접 이동할 수 있는 경우
IF CAN_MOVE(LOCAL, ARG) & 1
	;거기에 이동
	RETURN ARG
ENDIF

;막다른 골목으로부터 갈 수 있는 장소는 고정이므로, 거기를 목표로 한다
SELECTCASE ARG
	;캇파의 아지트, 릴리 하우스, 수영장은 현무의늪만
	CASE 704,709,735
		RETURN 703
	;히나 하우스, 고양이의 마을, 큰두꺼비의연못은 수해 중부만
	CASE 706,708,710
		RETURN 707
	CASE 712,732
		RETURN 711
	CASE 733
		RETURN 705
	;하늘 오두막
	CASE 734
		RETURN 701
	CASE 736
		RETURN 711
	CASE 720 TO 729
		SIF !GROUPMATCH(LOCAL:0,720,721,722,723,724,725,726,727,728,729,730)
			RETURN 730
ENDSELECT

;직접 이동할 수 없는 경우,  1개가까운 위치를 잠정 목적지로 다시 설정해 루프
;지점 추가시 요점 보충(전케이스 수정하는 것)
SELECTCASE ARG
	CASE 701
		RETURN 702
	CASE 702
		IF GROUPMATCH(LOCAL:0,717,718,719)
			RETURN 716
		ELSEIF LOCAL:0 == 734
			RETURN 701
		ELSE
			RETURN 703
		ENDIF
	;현무의늪
	CASE 703
		IF GROUPMATCH(LOCAL:0,701,715,716,717,718,719,734,735)
			RETURN 702
		ELSE
			RETURN 705
		ENDIF
	CASE 704
		RETURN 703
	;산 중턱
	CASE 705
		IF GROUPMATCH(LOCAL:0,701,702,704,709,715,716,717,718,719,734,735)
			RETURN 703
		ELSE
			RETURN 707
		ENDIF
	;분기
	CASE 707
		SELECTCASE LOCAL:0
			CASE 720 TO 730
				RETURN 731
			CASE 712,732,736
				RETURN 711
			CASEELSE
				RETURN 705
		ENDSELECT
	CASE 709
		RETURN 703
	CASE 706,708,710,711
		RETURN 707
	CASE 712
		RETURN 711
	;가을 하우스
	CASE 715
		IF GROUPMATCH(LOCAL:0,717,718,)
			RETURN 719
		ELSE
			RETURN 702
		ENDIF
	CASE 716
		RETURN 702
	CASE 717 TO 719
		RETURN 716
	;카센하우스1층
	CASE 720 TO 722
		;저택 위의 층이라면 응접실
		IF GROUPMATCH(LOCAL:0,724,725,726,727,728)
			RETURN 723
		;(이)가 아니면 현관
		ELSE
			RETURN 729
		ENDIF
	CASE 723
		;저택 위의 층이라면 거실
		IF GROUPMATCH(LOCAL:0,727,728)
			RETURN 726
		;(이)가 아니면 현관
		ELSE
			RETURN 729
		ENDIF
	CASE 724,725,726
		;응접실
		RETURN 723
	CASE 727,728
		RETURN 726
	CASE 729
		;저택 위의 층이라면 거실
		IF GROUPMATCH(LOCAL:0,724,725,726,727,728)
			RETURN 723
		;(이)가 아니면 선인의 뜰
		ELSE
			RETURN 730
		ENDIF
	;선인의 뜰
	CASE 730
	;zurasita
		;저택이라면 현관
		IF GROUPMATCH(LOCAL:0,720,721,722,723,724,725,726,727,728)
			RETURN 729
		;(이)가 아니면 대싸리
		ELSE
			RETURN 731
		ENDIF
	;대싸리
	CASE 731
		;저택이라면 뜰
		IF GROUPMATCH(LOCAL:0,720,721,722,723,724,725,726,727,728,729)
			RETURN 730
			;zurasita
		ELSE
			RETURN 707
		ENDIF
	CASE 732
		RETURN 711
	CASE 733
		RETURN 705
	CASE 734
		RETURN 702
	CASE 735
		RETURN 703
	CASE 736
		RETURN 711
ENDSELECT