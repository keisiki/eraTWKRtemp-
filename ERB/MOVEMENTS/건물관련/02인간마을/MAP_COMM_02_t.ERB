TRYCALLFORM MAP_SATO_{TFLAG:맵변환}(AA)
ENDIF

@MAP_CAN_MOVE_2(ARG, ARG:1)
#FUNCTION
#DIM 재택
SELECTCASE ARG
	;코스즈의 방
	CASE 226
		IF ARG:1 == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:[[코스즈]]:동행 || CFLAG:[[아큐]]:동행
				RETURNF 1
			ELSEIF TALENT:[[코스즈]]:연모
				RETURNF 1
			ELSEIF TALENT:[[코스즈]]:사모 && CFLAG:[[코스즈]]:현재위치 == ARG
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = ARG
				RETURNF 0
			ENDIF
		;본인은 들어갈 수 있는, 아큐도 넣는다
		ELSEIF ARG:1 == [[코스즈]] || ARG:1 == [[아큐]]
			RETURNF 1
		ELSE
			RETURNF 0
		ENDIF
	;아큐 방
	CASE 229
		IF ARG:1 == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:[[아큐]]:동행
				RETURNF 1
			ELSEIF TALENT:[[아큐]]:연모
				RETURNF 1
			ELSEIF TALENT:[[아큐]]:사모 && CFLAG:[[아큐]]:현재위치 == ARG
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = ARG
				RETURNF 0
			ENDIF
		;본인은 들어갈 수 있는, 궁합이 좋은 캐릭터도 넣는다
		ELSEIF ARG:1 == [[아큐]] || RELATION:[[아큐]]:(ARG:1) >= 100
			RETURNF 1
		ELSE
			RETURNF 0
		ENDIF
	;미요이 방
	CASE 239
		IF ARG:1 == MASTER
			IF FLAG:70
				RETURNF 1
			ELSEIF CFLAG:[[미요이]]:동행
				RETURNF 1
			ELSEIF TALENT:[[미요이]]:연모
				RETURNF 1
			ELSEIF TALENT:[[미요이]]:사모 && CFLAG:[[미요이]]:현재위치 == ARG
				RETURNF 1
			ELSE
				TFLAG:이동불능메시지 = ARG
				RETURNF 0
			ENDIF
		;본인은 들어갈 수 있는
		ELSEIF ARG:1 == [[미요이]]
			RETURNF 1
		ELSE
			RETURNF 0
		ENDIF
	;노와 혼숙여관, 당신 이외는 들어가지 않는다
	CASE 220, 225
		SIF ARG:1 != MASTER
			RETURNF 0
	;대절욕탕, 당신 이외에는 들어가지 않는다, 대절하지 않으면 들어갈 수 없다
	CASE 228
		SIF ARG:1 != MASTER
			RETURNF 0
		IF !욕탕대절(DAY)
			TFLAG:이동불능메시지 = ARG
			RETURNF 0
		ENDIF
	CASEELSE
		RETURNF 1
ENDSELECT
RETURNF 1


@MAP_CANNOT_WORD_2(ARG)
SELECTCASE TFLAG:이동불능메시지
	CASE 224,231 TO 235, 208 TO 210, 241
		PRINTFORMW 자물쇠가 걸려 있다
	CASE 226, 229, 239
