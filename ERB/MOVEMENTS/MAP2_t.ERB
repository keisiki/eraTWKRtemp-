
@GETMAP2(ARG)
#DIM 기색
기색 = 0
IF TALENT:MASTER:위치짐작
	FOR LOCAL, 1, CHARANUM
		IF CFLAG:LOCAL:현재위치 == (ARG * 10) + (CFLAG:MASTER:데이트중 * 100)
			IF CFLAG:LOCAL:행동 == 5
				기색 = 2
				BREAK
			ENDIF
			기색 = 1
		ENDIF
	NEXT
	IF 기색 == 1
		SETCOLOR 255, 100, 200
	ELSEIF 기색 == 2
		SETCOLOR 255, 100, 0
	ENDIF
ENDIF
SIF CFLAG:MASTER:현재위치 == (ARG * 10) + (CFLAG:MASTER:데이트중 * 100)
	SETCOLOR 0 , 255, 0
IF ARG == 68
	SETCOLOR 75 , 35, 90
	PRINTBUTTON "森", 650
ELSEIF ARG == 67
	SETCOLOR 100 , 255, 255
	PRINTBUTTON "◇", 640
ELSE
	PRINTBUTTON (TOFULL(TOSTR(ARG))), ARG
ENDIF
RESETCOLOR
