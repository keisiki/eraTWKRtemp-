SIF CFLAG:동침중
	RETURN 0
SIF TCVAR:TARGET:101 != PLAYER
	RETURN 0
;기력 0
SIF BASE:MASTER:기력 <= 0
	RETURN 0
SIF GETBIT (TCVAR:26, 8)
	RETURN 0
SIF CFLAG:우후후 != 2
	RETURN 0
RETURN 1
