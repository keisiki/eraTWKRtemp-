@COM351
#DIM NUM_TARGET
NUM_TARGET = GET_TARGETNUM()
;데리고나간다
VARSET LOCAL
SIF !NUM_TARGET
	RETURN -1
FOR LOCAL, 1, NUM_TARGET + 1
	IF COM_351_CONDITION(TARGET:LOCAL) >= 2
		LOCAL:97 += 1
	ENDIF
NEXT
IF NUM_TARGET == 1 || LOCAL:97 == 1
	IF COM_351_CONDITION(TARGET) < 1
		RETURN -1
	ELSEIF COM_351_CONDITION(TARGET) < 2
		DRAWLINE
		PRINTFORMW %타겟은% 지금 바쁩니다.
		RETURN -1
	ENDIF
	IF CFLAG:TARGET:동행
		CFLAG:TARGET:동행 = 0
		CFLAG:MASTER:동행 = 0
		PRINTFORMW 동행 해제합니다.
	ELSE
		CFLAG:TARGET:동행 = 60
		;우＋외＋우산 or상대가 우산때는 한우산을씀
		SIF TIME:5 > 3 && TIME:5 < 14 && OUTROOF(CFLAG:MASTER:현재위치) && (ITEM:36 || EQUIP:TARGET:액세서리== 6)
			TEQUIP:TARGET:201 = 1
		PRINTFORMW %타겟을% 데리고 나갑니다
		CFLAG:MASTER:동행 = 60
	ENDIF
	TIME += 1
	SIF CFLAG:TARGET:동행
		CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)
	RETURN 1
ENDIF


PRINTL 누구를 권합니까?
FOR LOCAL, 1, NUM_TARGET + 1
	SIF COM_351_CONDITION(TARGET:LOCAL) <= 0
		CONTINUE
	PRINTFORML [{LOCAL}] - %CALLNAME:(TARGET:LOCAL)%
NEXT
PRINTL [98] - 모아서 데리고나간다
PRINTL [99] - 동행 해제
PRINTL [100] - 그만둔다
DO
	INPUT
	SELECTCASE RESULT
	CASE 100
		RETURN -1
	CASE 99
		FOR LOCAL, 1, NUM_TARGET + 1
			SIF CFLAG:(TARGET:LOCAL):동행 
				CFLAG:(TARGET:LOCAL):동행 =  0
			;한우산을씀도 없어진다
			TEQUIP:(TARGET:LOCAL):201 = 0
		NEXT
		CFLAG:MASTER:동행 = 0
		RETURN 1
	CASE 98
		FOR LOCAL, 1, NUM_TARGET + 1
			IF COM_351_CONDITION(TARGET:LOCAL) >= 3
				CFLAG:(TARGET:LOCAL):동행 = 60
				LOCAL:98 += 1
			ENDIF
		NEXT
		PRINTFORMW {LOCAL:98}인 정리해 데리고 나갑니다
		CFLAG:MASTER:동행 = 60
		TIME += LOCAL:98
		SIF CFLAG:TARGET:동행
			CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)
		RETURN 1
	CASEELSE
		IF !INRANGE(RESULT, 1, NUM_TARGET)
			CLEARLINE 1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 1
			CLEARLINE 1
			CONTINUE
		ELSEIF COM_351_CONDITION(TARGET:RESULT) < 2
			PRINTFORMW %조사처리(CALLNAME:(TARGET:RESULT),"는")% 지금 바쁩니다.
			CLEARLINE 2
			CONTINUE
		ENDIF
		BREAK
	ENDSELECT
LOOP 1

CFLAG:(TARGET:RESULT):동행 = 60
;우＋외＋우산 or상대가 우산때는 한우산을씀
SIF TIME:5 > 3 && TIME:5 < 14 && OUTROOF(CFLAG:MASTER:현재위치) && (ITEM:36 || EQUIP:TARGET:액세서리== 6)
	TEQUIP:TARGET:201 = 1
PRINTFORMW %조사처리(CALLNAME:(TARGET:RESULT),"를")% 데리고 나갑니다
CFLAG:MASTER:동행 = 60
TIME += 1
;SOURCE까지를 돌리지 않기 때문에 여기서 말을 표시시킨다
SIF CFLAG:TARGET:동행
	CALL KOJO_MESSAGE_SEND("DIRECT",351,TARGET,-1,-1)

RETURN 1

