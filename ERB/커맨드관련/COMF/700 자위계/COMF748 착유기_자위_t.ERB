;-------------------------------------------------
;실행 가능 판정
;-------------------------------------------------
@COM_ABLE748
;착유기 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(748)
	RETURN RESULT
;해제는 언제라도 가능
SIF TEQUIP:17
	RETURN 1
;아이템 을 가지고 있는인가, 아이템 없음 설정이 아니면 안 돼
SIF ITEM:11 == 0 && NOITEM == 0
	RETURN 0
;모유체질이 아니면 사용할 수 없다
SIF TALENT:모유체질 == 0
	RETURN 0
;상반신착의
SIF TEQUIP:1 > 1
	RETURN 0
;유두캡 사용중은 불가
SIF TEQUIP:16
	RETURN 0
;유방 전극 장착중은 안 돼
SIF TEQUIP:24
	RETURN 0
;B감도 2 이하는 안 돼
SIF ABL:TARGET:B감각 <= 2
	RETURN 0
;남자라면 안 돼
SIF !(TALENT:2 & 1)
	RETURN 0
;ASSI의 경우, 기교 3이상이 아니면 사용할 수 없다.
IF ASSIPLAY
	SIF ABL:ASSI:기교 < 3
		RETURN 0
ENDIF
;샤워중은 안 돼
SIF TEQUIP:32
	RETURN 0
;새댁플레이중은 안 돼
SIF TEQUIP:33
	RETURN 0
;침대 룸이 아니면 안 돼
SIF !BEDROOM(CFLAG:PLAYER:현재위치)
	RETURN 0
RETURN 1

