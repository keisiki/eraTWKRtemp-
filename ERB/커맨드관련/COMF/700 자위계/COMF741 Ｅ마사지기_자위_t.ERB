;-------------------------------------------------
;E마사지기(위)
;도구 사용 커맨드, 레벨 2
;-------------------------------------------------
@COM741
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
DOWNBASE:PLAYER:체력 += 30
DOWNBASE:PLAYER:기력 += 150

SOURCE:PLAYER:쾌C = 500
SOURCE:PLAYER:노출 = 40
SOURCE:PLAYER:일탈 = 60
SOURCE:PLAYER:반감 = 60

;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:PLAYER:자기애 < 0 || TALENT:PLAYER:저항
	SOURCE:PLAYER:울굴 += 60

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
SIF !FLAG:시간정지
	TIME += 5
;자위경험
CFLAG:PLAYER:자위했다 ++

EXP:PLAYER:도구사용경험 ++

RETURN 1

;-------------------------------------------------
;실행 가능 판정
;-------------------------------------------------
@COM_ABLE741
;E마사지기 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(741)
	RETURN RESULT
;아이템 을 가지고 있는인가, 아이템 없음 설정이 아니면 안 돼
SIF ITEM:1 == 0 && NOITEM == 0
	RETURN 0
;ASSI의 경우, 기교 3이상이나 새드가 아니면 사용할 수 없다.
IF ASSIPLAY
	SIF ABL:ASSI:기교 < 3 && TALENT:ASSI:새드 == 0
		RETURN 0
ENDIF
;샤워중은 안 돼
SIF TEQUIP:32
	RETURN 0
;침대 룸이 아니면 안 돼
SIF !BEDROOM(CFLAG:PLAYER:현재위치)
	RETURN 0
RETURN 1

