;-------------------------------------------------
;애널비즈
;도구 사용 커맨드, 레벨 3
;-------------------------------------------------
@COM746
;착탈의처리
TEQUIP:PLAYER:애널비즈 = !TEQUIP:PLAYER:애널비즈
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
DOWNBASE:PLAYER:체력 += 60
DOWNBASE:PLAYER:기력 += 150

SOURCE:PLAYER:쾌A = 150
SOURCE:PLAYER:고통 = 200
SOURCE:PLAYER:노출 = 50
SOURCE:PLAYER:굴종 = 50
SOURCE:PLAYER:일탈 = 60
SOURCE:PLAYER:반감 = 80

;장착시는 쾌A는 내린다
SIF TEQUIP:PLAYER:애널비즈
	TIMES SOURCE:PLAYER:쾌A , 0.80

;제외할 때는 쾌A는 오른다
SIF !TEQUIP:PLAYER:애널비즈
	TIMES SOURCE:PLAYER:쾌A , 3.00

;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:PLAYER:자기애 < 0 || TALENT:PLAYER:저항
	SOURCE:PLAYER:울굴 += 70

;A에의 고통은 먼저 처리해 둔다
CALL PAIN_CHECK_A(PLAYER)
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
STAIN:PLAYER:장내 |= STAIN:PLAYER:4
STAIN:PLAYER:4 |= STAIN:PLAYER:장내
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
SIF !FLAG:시간정지
	TIME += 5
SIF !TEQUIP:PLAYER:애널비즈
	EXP:PLAYER:A경험 += 2

;자위경험
CFLAG:PLAYER:자위했다 ++

EXP:PLAYER:도구사용경험 ++

RETURN 1
;-------------------------------------------------
;장착 계속의 처리
;-------------------------------------------------
@EQUIP_COM746(PLAYER)
;애널비즈 삽입중

PRINTL ＜애널비즈 삽입중＞

DOWNBASE:PLAYER:체력 += 60
DOWNBASE:PLAYER:기력 += 150

SOURCE:PLAYER:쾌A += 75
SOURCE:PLAYER:노출 += 25
SOURCE:PLAYER:굴종 += 25
SOURCE:PLAYER:일탈 += 25
;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:PLAYER:자기애 < 0 || TALENT:PLAYER:저항
	SOURCE:PLAYER:울굴 += 35

;A에의 고통은 먼저 처리해 둔다
;EXP:A경험을 본다
LOCAL = 100
LOCAL:1 = 25
IF EXP:PLAYER:A경험 < EXPLV:1
	TIMES LOCAL , 3.00
	TIMES LOCAL:1 , 3.00
ELSEIF EXP:PLAYER:A경험 < EXPLV:2
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 2.00
ELSEIF EXP:PLAYER:A경험 < EXPLV:3
	TIMES LOCAL , 0.80
	TIMES LOCAL:1 , 1.50
ELSEIF EXP:PLAYER:A경험 < EXPLV:4
	TIMES LOCAL , 0.60
	TIMES LOCAL:1 , 1.20
ELSEIF EXP:PLAYER:A경험 < EXPLV:5
	TIMES LOCAL , 0.40
ELSEIF EXP:PLAYER:A경험 >= EXPLV:5
	TIMES LOCAL , 0.20
ENDIF

;PALAM:윤활을 본다
IF PALAM:PLAYER:윤활 < PALAMLV:1
	TIMES LOCAL , 1.20
	TIMES LOCAL:1 , 2.00
ELSEIF PALAM:PLAYER:윤활 < PALAMLV:2
	TIMES LOCAL , 1.00
	TIMES LOCAL:1 , 1.50
ELSEIF PALAM:PLAYER:윤활 < PALAMLV:3
	TIMES LOCAL , 0.60
ELSEIF PALAM:PLAYER:윤활 < PALAMLV:4
	TIMES LOCAL , 0.30
ELSEIF PALAM:PLAYER:윤활 >= PALAMLV:4
	TIMES LOCAL , 0.20
ENDIF
SOURCE:PLAYER:고통 += LOCAL
SOURCE:PLAYER:반감 += LOCAL:1

RETURN 1

