;-------------------------------------------------
;애널개장
;애무계 커맨드, 레벨 2
;-------------------------------------------------
@COM713
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = TARGET
;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력

DOWNBASE:PLAYER:체력 += 50
DOWNBASE:PLAYER:기력 += 90

SOURCE:PLAYER:쾌A = 43
SOURCE:PLAYER:달성 = 20
SOURCE:PLAYER:공포 = 120
SOURCE:PLAYER:액체 = 10
SOURCE:PLAYER:노출 = 300
SOURCE:PLAYER:굴종 = 450
SOURCE:PLAYER:일탈 = 150
SOURCE:PLAYER:반감 = 150
;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:PLAYER:자기애 < 0 || TALENT:PLAYER:저항
	SOURCE:PLAYER:울굴 += 150

;처녀, 정조 관념
IF TALENT:PLAYER:처녀 == 1 || TALENT:PLAYER:처녀 == -1
	TIMES SOURCE:PLAYER:공포 , 1.20
	TIMES SOURCE:PLAYER:굴종 , 1.20
	TIMES SOURCE:PLAYER:반감 , 1.20
	SOURCE:PLAYER:노출 += 300
	IF TALENT:PLAYER:정조 > 0
		TIMES SOURCE:PLAYER:노출 , 2.00
		TIMES SOURCE:PLAYER:일탈 , 2.00
	ENDIF
ENDIF
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;노예의 V⇔손가락의 더러움이 이동
STAIN:PLAYER:4 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:PLAYER:4
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
SIF !FLAG:시간정지
	TIME += 5
;노출벽 Lv3 이상으로 자위경험 가산
SIF ABL:PLAYER:노출벽 >= 3
	CFLAG:PLAYER:자위했다 ++
RETURN 1


@CAN_COM713(PLAYER)
SKIPDISP PLAYER
PRINTL 애널개장
;-------------------------------------------------
;실행할 수 있을까의 판정
;-------------------------------------------------
	A = 0
	S = 0
	;모든 명령에 공통의 요소를 고려
	;(순종이 높다고 명령에 따르기 쉬운 등)
	CALL COM_ORDER

	;ABL:PLAYER:욕망
	IF ABL:PLAYER:욕망
		SIF S
			PRINT  + 
		A += ABL:PLAYER:욕망 * 3
		PRINT 욕망
		PRINTV 'LV, ABL:PLAYER:욕망, '(, ABL:PLAYER:욕망 * 3, ')
		S = 1
	ENDIF
	;ABL:PLAYER:A감각
	IF ABL:PLAYER:A감각
		SIF S
			PRINT  + 
		A += ABL:PLAYER:A감각 * 2
		PRINT A감각
		PRINTV 'LV, ABL:PLAYER:A감각, '(, ABL:PLAYER:A감각 * 2, ')
		S = 1
	ENDIF
	;ABL:PLAYER:봉사정신
	IF ABL:PLAYER:봉사정신
		SIF S
			PRINT  + 
		A += ABL:PLAYER:봉사정신 * 4
		PRINT 봉사정신
		PRINTV 'LV, ABL:PLAYER:봉사정신, '(, ABL:PLAYER:봉사정신 * 4, ')
		S = 1
	ENDIF
	;ABL:PLAYER:노출벽
	IF ABL:PLAYER:노출벽
		SIF S
			PRINT  + 
		A += ABL:PLAYER:노출벽 * 3
		PRINT 노출벽
		PRINTV 'LV, ABL:PLAYER:노출벽, '(, ABL:PLAYER:노출벽 * 3, ')
		S = 1
	ENDIF
	;ABL:PLAYER:자위중독
	IF ABL:PLAYER:자위중독
		SIF S
			PRINT  + 
		A += ABL:PLAYER:자위중독 * 3
		PRINT 자위중독
		PRINTV 'LV, ABL:PLAYER:자위중독, '(, ABL:PLAYER:자위중독 * 3, ')
		S = 1
	ENDIF

	IF MARK:PLAYER:쾌락각인
		SIF S
			PRINT  + 
		A += MARK:PLAYER:쾌락각인 * 3
		PRINT 쾌락각인
		PRINTV 'LV, MARK:PLAYER:쾌락각인, '(, MARK:PLAYER:쾌락각인 * 3, ')
		S = 1
	ENDIF

	;PALAM:PLAYER:윤활(의 부족)
	IF PALAM:PLAYER:윤활 < PALAMLV:3
		PRINT  - 
		A -= 5
		PRINT 윤활 부족
		PRINTV '(, 5, ')
		S = 1
	ENDIF
	;PALAM:PLAYER:욕정
	IF GETPALAMLV(PALAM:PLAYER:욕정, 5)
		SIF S
			PRINT  + 
		A += GETPALAMLV(PALAM:PLAYER:욕정, 5) * 3
		PRINT 욕정
		PRINTV 'LV, GETPALAMLV(PALAM:PLAYER:욕정, 5), '(, GETPALAMLV(PALAM:PLAYER:욕정, 5) * 3, ')
		S = 1
	ENDIF

	;수줍음
	IF TALENT:PLAYER:수치심 > 0
		PRINT  - 
		A -= 2
		PRINT 수줍음
		PRINTV '(, 2, ')
		S = 1
	ENDIF
	;쾌감에 부정(음란, 창부로 무효)
	IF TALENT:PLAYER:쾌감응답 < 0 && !TALENT:PLAYER:음란
		PRINT  - 
		A -= 5
		PRINT 쾌감에 부정
		PRINTV '(, 5, ')
		S = 1
	ENDIF
	;남성기피(연모, 친애로 무효)
	IF OTOKOGIRAI(TARGET) == 1
		PRINT  - 
		A -= 12
		PRINT 남성기피
		PRINTV '(, 12, ')
		S = 1
	ENDIF

	;처녀
	IF TALENT:PLAYER:처녀 == 1
		PRINT  - 
		A -= 20
		PRINT 처녀
		PRINTV '(, 20, ')
		S = 1
	ELSEIF EXP:PLAYER:A경험 < EXPLV:2
		PRINT  - 
		A -= 5
		PRINT A경험
		PRINT 부족
		PRINTV '(, 5, ')
		S = 1
	ENDIF

	;조교자가 후타나리
	IF (TALENT:PLAYER:2 & 3) == 3
		PRINT  + 
		A += 4
		PRINT 후타나리
		PRINTV '(, 4, ')
		S = 1
	ENDIF

	;미약
	IF TCVAR:PLAYER:춘약
		SIF S
			PRINT  + 
		A += 6
		PRINT 춘약
		PRINTV '(, 6, ')
		S = 1
	ENDIF

	;'합계를 표시(18이상으로 실행)
	PRINT  = 
	PRINTV A

	V = 18
	SIF A < V
		PRINT  < 
	SIF A == V
		PRINT  = 
	SIF A > V
		PRINT  > 
	PRINT 실행치
	PRINTV V

	WAIT
	SKIPDISP 0
	;실행할 수 없다
	SIF A < V
		RETURN 0
RETURN 1

;-------------------------------------------------
;실행 가능 판정
;-------------------------------------------------
@COM_ABLE713
;애널개장 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(713)
	RETURN RESULT
;시간정지중은 허가
IF FLAG:70 != 1
	;순종이 2 미만이라면 안 돼
	SIF ABL:순종< 2
		RETURN 0
	;처녀의 경우, 순종 3이상 또는 노출벽 3이상 없으면 안 돼
	SIF TALENT:처녀 && ABL:순종 < 3 && ABL:노출벽 < 3
		RETURN 0
	;밧줄 사용 중에는 불가
	SIF TEQUIP:밧줄
		RETURN 0
ENDIF

;하반신착의
SIF TEQUIP:0 & 4 || TEQUIP:0 & 2
	RETURN 0
;애널바이브, 비즈 삽입하고 있는 때는 안 돼
SIF TEQUIP:14 || TEQUIP:15
	RETURN 0
;목욕탕플레이중은 플레이매트가 없으면 안 돼
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
RETURN 1

