;-------------------------------------------------
;실행 가능 판정
;-------------------------------------------------
@COM_ABLE742
;전동 클리캡 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(742)
	RETURN RESULT
;해제는 언제라도 가능
SIF TEQUIP:11
	RETURN 1
;아이템 을 가지고 있는인가, 아이템 없음 설정이 아니면 안 돼
SIF ITEM:2 == 0 && NOITEM == 0
	RETURN 0

;하반신착의
SIF TEQUIP:0 > 1
	RETURN 0
;남자나 양성은 안 돼
SIF (HAS_PENIS(TARGET))
	RETURN 0
;ASSI의 경우, 기교 3이상이 아니면 사용할 수 없다.
IF ASSIPLAY
	SIF ABL:ASSI:기교 < 3
		RETURN 0
ENDIF
;샤워중은 안 돼
SIF TEQUIP:32
	RETURN 0
RETURN 1

