@COM_ABLE120
;커닐링구스강제 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(120)
	RETURN RESULT
;조교자가 남자라면 안 돼
SIF !(TALENT:PLAYER:2 & 1)
	RETURN 0
;고양이혀의 노예의 경우는 기교 Lv2 이상 필요
SIF TALENT:고양이혀 && ABL:기교 < 2
	RETURN 0
;볼개그 사용중은 불가
SIF TEQUIP:볼개그
	RETURN 0
;수면간중
SIF CFLAG:장난 > 1
	RETURN 0
;정지 중에는 불가
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

