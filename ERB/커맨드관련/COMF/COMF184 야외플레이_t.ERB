;-------------------------------------------------
;야외플레이
;특수한 커맨드
;-------------------------------------------------
@COM184

;착탈의처리 종료시는 소스, 경험의 가산은 실시하지 않는다
TEQUIP:야외플레이 = !TEQUIP:야외플레이
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
DOWNBASE:체력 += 0
DOWNBASE:기력 += 150

SOURCE:공포 = 800
SOURCE:노출 = 1300
SOURCE:일탈 = 300
SOURCE:반감 = 600

;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:자기애 < 0 || TALENT:저항
	SOURCE:울굴 += 600

;고통을 수반하지 않는 마조끼 및 마조의 처리는 먼저 해 둔다
;마조끼를 본다
SELECTCASE ABL:마조끼
	CASE 0
		TIMES SOURCE:노출 , 0.80
		SOURCE:액체 += 0
		SOURCE:욕정 += 0
	CASE 1
		TIMES SOURCE:노출 , 1.00
		SOURCE:액체 += 20
		SOURCE:욕정 += 30
	CASE 2
		TIMES SOURCE:노출 , 1.20
		SOURCE:액체 += 40
		SOURCE:욕정 += 70
	CASE 3
		TIMES SOURCE:노출 , 1.40
		SOURCE:액체 += 70
		SOURCE:욕정 += 120
	CASE 4
		TIMES SOURCE:노출 , 1.50
		SOURCE:액체 += 110
		SOURCE:욕정 += 180
	CASE 5
		TIMES SOURCE:노출 , 1.70
		SOURCE:액체 += 150
		SOURCE:욕정 += 250
	CASE 6
		TIMES SOURCE:노출 , 1.90
		SOURCE:액체 += 200
		SOURCE:욕정 += 300
	CASE 7
		TIMES SOURCE:노출 , 2.10
		SOURCE:액체 += 250
		SOURCE:욕정 += 350
	CASE 8
		TIMES SOURCE:노출 , 2.30
		SOURCE:액체 += 300
		SOURCE:욕정 += 400
	CASE 9
		TIMES SOURCE:노출 , 2.50
		SOURCE:액체 += 350
		SOURCE:욕정 += 450
	CASEELSE
		TIMES SOURCE:노출 , 3.00
		SOURCE:액체 += 500
		SOURCE:욕정 += 500
ENDSELECT
RETURN 1


;-------------------------------------------------
;장착 계속의 처리
;-------------------------------------------------
@EQUIP_COM184(ARG)
;야외플레이
IF TEQUIP:ARG:야외플레이 == 1
	DOWNBASE:ARG:체력 += 20
	DOWNBASE:ARG:기력 += 50
ELSE
	DOWNBASE:ARG:체력 += 50
	DOWNBASE:ARG:기력 += 100
ENDIF

IF ARG > 0
	IF TEQUIP:ARG:야외플레이 == 1
		SOURCE:ARG:공포 += 200
		SOURCE:ARG:일탈 += 500
		SOURCE:ARG:반감 += 500
	ELSE
		SOURCE:ARG:공포 += 500
		SOURCE:ARG:일탈 += 1000
		SOURCE:ARG:반감 += 1000
	ENDIF
ENDIF

;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:ARG:자기애 < 0 || TALENT:ARG:저항
	SOURCE:ARG:울굴 += 700

;고통을 수반하지 않는 마조끼 및 마조의 처리는 먼저 해 둔다
;마조끼를 본다
LOCAL = 2000
SELECTCASE ABL:ARG:마조끼
CASE 0
	TIMES LOCAL , 0.80
	SOURCE:ARG:액체 += 0
	SOURCE:ARG:욕정 += 0
CASE 1
	TIMES LOCAL , 1.00
	SOURCE:ARG:액체 += 20
	SOURCE:ARG:욕정 += 30
CASE 2
	TIMES LOCAL , 1.20
	SOURCE:ARG:액체 += 40
	SOURCE:ARG:욕정 += 70
CASE 3
	TIMES LOCAL , 1.40
	SOURCE:ARG:액체 += 70
	SOURCE:ARG:욕정 += 120
CASE 4
	TIMES LOCAL , 1.50
	SOURCE:ARG:액체 += 110
	SOURCE:ARG:욕정 += 180
CASE 5
	TIMES LOCAL , 1.70
	SOURCE:ARG:액체 += 150
	SOURCE:ARG:욕정 += 250
CASE 6
	TIMES LOCAL , 1.90
	SOURCE:ARG:액체 += 200
	SOURCE:ARG:욕정 += 300
CASE 7
	TIMES LOCAL , 2.10
	SOURCE:ARG:액체 += 250
	SOURCE:ARG:욕정 += 350
CASE 8
	TIMES LOCAL , 2.30
	SOURCE:ARG:액체 += 300
	SOURCE:ARG:욕정 += 400
CASE 9
	TIMES LOCAL , 2.50
	SOURCE:ARG:액체 += 350
	SOURCE:ARG:욕정 += 450
CASEELSE
	TIMES LOCAL , 3.00
	SOURCE:ARG:액체 += 500
	SOURCE:ARG:욕정 += 500
ENDSELECT
SIF TEQUIP:ARG:야외플레이 == 1
	LOCAL /= 2

SOURCE:ARG:노출 += LOCAL

RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE184
;야외플레이 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(184)
	RETURN RESULT
;해제는 언제라도 가능
SIF TEQUIP:29
	RETURN 1
;아이템「목걸이」를 가지고 있는인가, 아이템 없음 설정이 아니면 안 돼
SIF ITEM:22 == 0 && NOITEM == 0
	RETURN 0
;온순한가 마조끼이 3이상 없으면 안 돼
SIF ABL:순종 <= 2 && ABL:마조끼 <= 2
	RETURN 0
;대상인가 주인이나 조수가 흡혈귀로, 시간이 낮이라면 안 돼
SIF (TALENT:흡혈귀 || TALENT:MASTER:흡혈귀) && TIME == 0
	RETURN 0
IF ASSI >= 0
	SIF TALENT:ASSI:흡혈귀 && TIME == 0
		RETURN 0
ENDIF
;목욕탕플레이중은 안 돼
SIF TEQUIP:31
	RETURN 0
;새댁플레이중은 안 돼
SIF TEQUIP:33
	RETURN 0
;정지 중에는 불가
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

