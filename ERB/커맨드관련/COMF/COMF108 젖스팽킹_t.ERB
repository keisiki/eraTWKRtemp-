;-------------------------------------------------
;젖스팬킹
;SM계 커맨드, 레벨 1
;-------------------------------------------------
@COM108
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 60
	SOURCE:고통 = 450

ELSE

	DOWNBASE:체력 += 60
	DOWNBASE:기력 += 20

	SOURCE:고통 = 450
	SOURCE:공포 = 400
	SOURCE:일탈 = 50
	SOURCE:반감 = 300
	IF TALENT:유치
		SOURCE:고통 += 350
		SOURCE:공포 += 200
		SOURCE:일탈 += 50
	ENDIF
ENDIF
;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;고통의 파라미터에 의한 고통의 소스 증가는 먼저 처리해 둔다
SOURCE:고통 = SOURCE:고통 * (10 + 5 * MAX(GETPALAMLV(PALAM:고통, 5) - 1, 0)) / 10
;마조끼에 응해 쾌B의 소스를 추가한다
SOURCE:쾌B += 30 * ABL:마조끼
;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;노예의 B⇔조교자의 손의 더러움이 이동
STAIN:5 |= STAIN:PLAYER:1
STAIN:PLAYER:1 |= STAIN:5
;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
IF FLAG:70 == 1
	IF HETEROSEX(TARGET, PLAYER)
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 2
	ENDIF
ELSE
	IF HETEROSEX(TARGET, PLAYER)
		EXP:(50 + HETEROSEX(TARGET, PLAYER)) += 2
		EXP:PLAYER:(50 + HETEROSEX(TARGET, PLAYER)) += 2
	ENDIF
ENDIF

EXP:PLAYER:가학쾌락경험 += 1

RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE108
;젖스팬킹 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(108)
	RETURN RESULT
;수면간중
SIF CFLAG:장난 > 1
	RETURN 0
;순종 3 미만의 ASSI의 경우 스팬킹은 할 수 없다(새드라면 OK)
IF ASSIPLAY
	SIF ABL:ASSI:순종 < 3 && TALENT:ASSI:새드 == 0
		RETURN 0
ENDIF
RETURN 1

