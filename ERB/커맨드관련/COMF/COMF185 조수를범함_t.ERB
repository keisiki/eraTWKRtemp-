@COM_ABLE185
LOCAL = 0
;조수를 범하는 실행 판정
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(185)
	RETURN RESULT
;조수가 없으면 안 돼
SIF ASSI < 1
	RETURN 0
;주인이 아니면 안 돼
SIF ASSIPLAY
	RETURN 0
;조수가 남자라면 안 돼
SIF !(TALENT:ASSI:2 & 1)
	RETURN 0
;체격 차이가 있는 경우는 주인이 금단의지식 소유가 아니면 안 돼
SIF ABS(TALENT:체형 - TALENT:ASSI:체형) > 2 && (TALENT:MASTER:금단의지식 == 0)
	RETURN 0
;주인이 남자, 반인반요, 후타나리, 혹은 페니스밴드가 없으면 안 돼
SIF !(TALENT:MASTER:2 & 2) && ITEM:PBAND == 0
	RETURN 0
;밧줄 사용 중이거나 순종이 3이상 없으면 안 돼
SIF TEQUIP:밧줄 == 0 && ABL:순종 < 3
	RETURN 0
;목욕탕플레이중은 플레이매트가 없으면 안 돼
IF TEQUIP:31
	SIF ITEM:20 == 0 && NOITEM == 0
		RETURN 0
ENDIF
;새댁플레이중은 안 돼
SIF TEQUIP:33
	RETURN 0
;정지 중에는 불가
SIF FLAG:70 == 1
	RETURN 0
RETURN 1

