;-------------------------------------------------
;조수를 범한다
;특수 커맨드
;-------------------------------------------------
@COM185
PRINTL 조수를 범한다
;-------------------------------------------------
;실행 판정 처리
;-------------------------------------------------
A = 0
S = 0

;모든 명령에 공통의 요소를 고려
;(순종이 높다고 명령에 따르기 쉬운 등)
CALL COM_ORDER

;ABL:욕망
IF ABL:욕망
	SIF S
		PRINT  + 
	A += ABL:욕망 * 2
	PRINT 욕망
	PRINTV 'LV, ABL:욕망, '(, ABL:욕망 * 2, ')
	S = 1
ENDIF

IF MARK:쾌락각인
	SIF S
		PRINT  + 
	A += MARK:쾌락각인 * 2
	PRINT 쾌락각인
	PRINTV 'LV, MARK:쾌락각인, '(, MARK:쾌락각인 * 2, ')
	S = 1
ENDIF
;PALAM:욕정
IF GETPALAMLV(PALAM:욕정, 5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:욕정, 5) * 2
	PRINT 욕정
	PRINTV 'LV, GETPALAMLV(PALAM:욕정, 5), '(, GETPALAMLV(PALAM:욕정, 5) * 2, ')
	S = 1
ENDIF
;조수의 ABL:노출벽
IF ABL:ASSI:노출벽
	SIF S
		PRINT  + 
	A += ABL:ASSI:노출벽 * 2
	PRINT 조수의 노출벽
	PRINTV 'LV, ABL:ASSI:노출벽, '(, ABL:ASSI:노출벽 * 2, ')
	S = 1
ENDIF

;조수가 연모
IF TALENT:ASSI:연모 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 10
	PRINT 조수가 연모
	PRINTV '(, 10, ')
	S = 1
ENDIF

;조수가 친애
IF TALENT:ASSI:연모 > 1 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 15
	PRINT 조수가 친애
	PRINTV '(, 15, ')
	S = 1
ENDIF

;조수가 처녀
IF TALENT:ASSI:처녀 == 1
	PRINT  - 
	A -= 50
	PRINT 조수가 처녀
	PRINTV '(, 50, ')
	S = 1
ENDIF

;합계를 표시(40이상으로 실행)
PRINT  = 
PRINTV A

V = 40
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 실행치
PRINTV V

WAIT

;실행할 수 없다
SIF A < V
	RETURN 0


;-------------------------------------------------
;실행 결정
;-------------------------------------------------
STR:0 = 조수를 범한다
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = PLAYER
;TCVAR:0 사정 대상 플래그(비트 0=TARGET 1=PLAYER 2=MASTER 3=ASSI)
;TCVAR:1 예비 사정 대상 플래그(비트를 사용하고 싶지 않은 인용, CFLAG:100으로 번역됩니다)	(1=TARGET 2=PLAYER 3=MASTER 4=ASSI 5=TARGET+ASSI 6=MASTER+ASSI)
;TCVAR:2 사정장소 플래그(-1=콘돔 1=질내 2=애널 3=수음 4=펠라티오 5=파이즈리 6=가랑이 7=풋잡 8=체표 9=애널 봉사 10=도구 11=촉수)

SETBIT TCVAR:MASTER:0, 3
TCVAR:MASTER:2 = 1
;강도
TCVAR:MASTER:4 = 1500

TEQUIP:ASSI:50 = MASTER

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력
DOWNBASE:체력 += 0
DOWNBASE:기력 += 250

SOURCE:사랑 = 200
SOURCE:액체 = 100
SOURCE:굴종 = 1500
SOURCE:일탈 = 700
SOURCE:반감 = 700

;-------------------------------------------------
;특수소스처리
;-------------------------------------------------
;억압, 저항 소유에는, 억울소스 추가
SIF TALENT:자기애 < 0 || TALENT:저항
	SOURCE:울굴 += 700

;조수가 처녀상실을 했을 경우, 굴복과 일탈을 증가
IF TALENT:ASSI:처녀 == 1
	TIMES SOURCE:일탈 , 20.00
	TIMES SOURCE:굴종 , 3.00
ENDIF

;-------------------------------------------------
;더러움의 처리
;-------------------------------------------------
;사정에 관계없이 행해지는 처리는 여기에서
IF TALENT:MASTER:2 & 2
	;주인의 P⇔조수의 V의 더러움이 이동
	STAIN:MASTER:2 |= STAIN:ASSI:3
	STAIN:ASSI:3 |= STAIN:MASTER:2
ENDIF

;-------------------------------------------------
;경험의 처리
;-------------------------------------------------
;조수의 V경험
EXP:ASSI:V경험 += 1

;조수의 레즈경험;동성애 레즈비언이라면 반환값 1 동성애자라면 반환값 2
SIF HETEROSEX(ASSI, MASTER) == 1
	EXP:ASSI:레즈경험 += 10

RETURN 1

