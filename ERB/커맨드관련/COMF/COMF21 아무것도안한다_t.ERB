;-------------------------------------------------
;아무것도하지않는다
;커뮤니케이션 계 커맨드, 레벨 1
;-------------------------------------------------
@COM21
;-------------------------------------------------
;COM별 FLAG의 설정
;-------------------------------------------------
;행위자
TCVAR:116 = -1

;-------------------------------------------------
;소스 추가 처리
;-------------------------------------------------
;소비 체력, 기력(시간정지시는 소비하지 않는다
IF FLAG:70 == 1
	BASE:MASTER:TSP -= 10
ELSE
	DOWNBASE:체력 += 10
	DOWNBASE:기력 += 10

	SOURCE:사랑 = 10
	SOURCE:노출 = 10
	SOURCE:일탈 = 10

	;-------------------------------------------------
	;특수소스처리
	;-------------------------------------------------
	;고통을 수반하지 않는 마조끼 및 매저키스트가 동반하는 처리는 먼저 해 둔다
	;마조끼를 본다
	SELECTCASE ABL:마조끼
		CASE 0
			TIMES SOURCE:노출 , 0.80
			SOURCE:액체 += 0
			SOURCE:욕정 += 0
		CASE 1
			TIMES SOURCE:노출 , 1.00
			SOURCE:액체 += 20
			SOURCE:욕정 += 30
		CASE 2
			TIMES SOURCE:노출 , 1.20
			SOURCE:액체 += 40
			SOURCE:욕정 += 70
		CASE 3
			TIMES SOURCE:노출 , 1.40
			SOURCE:액체 += 70
			SOURCE:욕정 += 120
		CASE 4
			TIMES SOURCE:노출 , 1.50
			SOURCE:액체 += 110
			SOURCE:욕정 += 180
		CASE 5
			TIMES SOURCE:노출 , 1.70
			SOURCE:액체 += 150
			SOURCE:욕정 += 250
		CASE 6
			TIMES SOURCE:노출 , 1.90
			SOURCE:액체 += 200
			SOURCE:욕정 += 300
		CASE 7
			TIMES SOURCE:노출 , 2.10
			SOURCE:액체 += 250
			SOURCE:욕정 += 350
		CASE 8
			TIMES SOURCE:노출 , 2.30
			SOURCE:액체 += 300
			SOURCE:욕정 += 400
		CASE 9
			TIMES SOURCE:노출 , 2.50
			SOURCE:액체 += 350
			SOURCE:욕정 += 450
		CASEELSE
			TIMES SOURCE:노출 , 3.00
			SOURCE:액체 += 500
			SOURCE:욕정 += 500
	ENDSELECT

	;마조를 본다
	IF TALENT:마조
		TIMES SOURCE:노출 , 2.50
		TIMES SOURCE:액체 , 1.20
		TIMES SOURCE:욕정 , 1.20
	ENDIF
ENDIF
RETURN 1

;-------------------------------------------------
;실행 판정
;-------------------------------------------------
@COM_ABLE21
;아무것도하지않는다
SIF !TFLAG:100
	RETURN 0
;일괄관리
SIF GLOBAL_COMABLE(21)
	RETURN RESULT
RETURN 1

