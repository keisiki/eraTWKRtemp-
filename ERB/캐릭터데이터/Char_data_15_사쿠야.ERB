@CHARAMOVE_DATA_15(ARG, ARG:2)
LOCAL = 15
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			CASE 17, 19, 53
				SIF FLAG:15 != LOCAL
					RETURN -100
			;사쿠야 씨는 소쇄이므로 사람이 있는 집의 목욕탕이라든지 화장실에는 가지 않는다
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 51
				RETURN -100
			;헛간과 저택 밖으로는 나오지 않는다
			CASE 305, 334 TO 348
				RETURN -100
			CASEELSE
				;기본적으로 배회하고 있지만 사쿠야 씨는 예쁘다를 좋아해서 그만 청소해버린다
				SIF !RAND:4
					RETURN YOGORE:(ARG:2) / 300
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 2, 3, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4, 21,22,23,27, 31,34 TO 38, 51,52,54,55
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

