@CHARAMOVE_DATA_123(ARG,ARG:2)
LOCAL = 123
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
		;연동 처리(마이와 함께)
		IF TALENT:123:연모 || (TALENT:123:사모 && !TALENT:123:사모)
			CFLAG:LOCAL:현재위치 = CFLAG:123:만난위치 ?  CFLAG:123:만난위치 # SUKIMA()
		ELSE
			CFLAG:LOCAL:현재위치 = CFLAG:122:만난위치 ?  CFLAG:122:만난위치 # SUKIMA()
		ENDIF
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;특히 이루어
			CASEELSE
				RETURN 0
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 2, 4, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 21, 22, 23, 41, 42, 43, 46, 47, 51, 52, 53, 56, 57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

