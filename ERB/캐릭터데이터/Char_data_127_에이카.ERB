@CHARAMOVE_DATA_127(ARG,ARG:2)
LOCAL = 127
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;八雲邸と彼岸から先は行かない（入り口部分は出る時用）
			CASE 604, 610, 613, 620, 621, 630, 631, 640, 641
				RETURN -10
			CASE 610 TO 652
				RETURN -100
			;潤美の家には行かない
			CASE 608
				RETURN -100
			;積石塚に引きこもる
			CASE 603
				RETURN 10
			;특히 이루어
			CASEELSE
				RETURN 0
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 6
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 61, 62
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

