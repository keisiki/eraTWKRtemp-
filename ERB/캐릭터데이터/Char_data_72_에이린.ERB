@CHARAMOVE_DATA_72(ARG,ARG:2)
LOCAL = 72
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;사람이 있는 집의 목욕탕이라든지 화장실에는 가지 않는다
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 43, 44, 51, 52
				RETURN -100
			;개인 방에는 못 들어간다
			CASE 15, 17, 19, 53, 55
				SIF FLAG:15 != LOCAL
					RETURN -100
			;몽환관에는 가지 않는다
			CASE 450
				RETURN -10
			CASE 450 TO 466
				RETURN -100
			;남의 집에는 들어가지 않는다
			CASE 432, 437, 439, 440, 442, 443, 445
				RETURN -100
			;来客用トイレ,てゐ私室,鈴仙私室,裏庭,物置,倉庫,地下室はあんまり行かない
			CASE 406, 410, 411, 422, 424, 427, 430
				RETURN -5
			;診察室,調剤室,縁側,居間によく居る
			CASE 404, 405, 409, 416
				RETURN 5
			;純狐邸には行かない
			CASE 1061 TO 1072
				RETURN -100
			;出るとき用
			CASE 1060
				RETURN -10
			;ドレミー宅には行かない
			CASE 1050 TO 1059
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 2, 4
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 21,22,23,27, 41,42,43,45,46,48
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

