@CHARAMOVE_DATA_79(ARG,ARG:2)
LOCAL = 79
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;아지트, 치유리 집, 슈우카, 카센가, 은둔지, 오두막
			CASE 704, 706, 709, 715 TO 719, 720 TO 730, 733, 734
				RETURN -100
			;더러움에 매료된다
			CASEELSE
				RETURN YOGORE:(ARG:2) / 300
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 5, 6, 7
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 51,52,53,56,57, 61,62, 71,72,73
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

