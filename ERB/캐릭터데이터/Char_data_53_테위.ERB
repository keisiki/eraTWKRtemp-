@CHARAMOVE_DATA_53(ARG,ARG:2)
LOCAL = 53
SELECTCASE ARG
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;몽환관에는 가지 않는다
			CASE 450
				RETURN -10
			CASE 450 TO 466
				RETURN -100
			;남의 집에는 들어가지 않는다
			CASE 432, 437, 439, 440, 442, 443, 445
				RETURN -100
			;来客用トイレ,永琳私室,輝夜私室,裏庭,物置,倉庫,地下室はあんまり行かない
			CASE 406, 413, 414, 422, 424, 427, 430
				RETURN -5
			;てゐ私室,鈴仙私室,庭がちょっと好き
			CASE 410, 411, 421
				RETURN 3
			;縁側,居間,兎の洞穴,斜角の竹林,迷いの小道によく居る
			CASE 409, 416, 431, 433, 434
				RETURN 5
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 4, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 41 TO 47, 51,52,53,56,57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

