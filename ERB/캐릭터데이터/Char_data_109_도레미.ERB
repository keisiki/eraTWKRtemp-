@CHARAMOVE_DATA_109(ARG,ARG:2)
LOCAL = 109
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;純狐邸には行かない
			CASE 1061 TO 1072
				RETURN -100
			;出るとき用
			CASE 1060
				RETURN -10
			;綿月亭には行かない
			CASE 1022 TO 1049
				RETURN -100
			;出るとき用
			CASE 1020, 1021
				RETURN -10
			;他人の家には行かない
			CASE 1005 TO 1009
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 10
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 101
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT
