@CHARAMOVE_DATA_52(ARG,ARG:2)
LOCAL = 52
SELECTCASE ARG
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;사람이 있는 집의 목욕탕이라든지 화장실에는 가지 않는다
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 43, 44, 51, 52
				RETURN -100
			;개인 방에는 못 들어간다
			CASE 15, 17, 19, 53, 55
				SIF FLAG:15 != LOCAL
					RETURN -100
			;몽환관에는 가지 않는다
			CASE 450
				RETURN -10
			CASE 450 TO 466
				RETURN -100
			;남의 집에는 들어가지 않는다
			CASE 432, 437, 439, 440, 442, 443, 445
				RETURN -100
			;来客用トイレ,永琳私室,輝夜私室,裏庭,物置,倉庫,地下室はあんまり行かない
			CASE 406, 413, 414, 422, 424, 427, 430
				RETURN -5
			;영원정내
			CASE 401, 403, 404, 405, 410, 411, 421
				RETURN 3
			;거실, 툇마루
			CASE 409, 416
				RETURN 5
			;도레미 집에는 가지 않는다
			CASE 1050 TO 1059
				RETURN -100
			;빈 집에는 가지 않는다
			CASE 1007
				RETURN -100
			;門番詰め所は行かない
			CASE 1023
				RETURN -100
			;二階はあまり行かない
			CASE 1040
				RETURN -5
			;玉兎街方面,玉兎食堂,玉兎詰め所によく居る
			CASE 1003, 1004, 1010 TO 1013, 1024, 1025
				RETURN 5
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 2, 4
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4, 21,22,23,27, 41 TO 45
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

