@CHARAMOVE_DATA_102(ARG,ARG:2)
LOCAL = 102
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;마리사 침실, 앨리스의 방, 유메코의 방
			CASE 512, 521, 523
				RETURN -10
			;자기 방
			CASE 522
				;7~22시는 피하는, 자고 일어나기와 자기 전은 가기 쉽고
				IF BETWEENTIME(420,1320)
					RETURN -10
				ELSE
					RETURN 10
				ENDIF
			;연구실
			CASE 524
				RETURN -10
			;리빙
			CASE 525
				;10~17시 밖은 가기 쉽다
				IF BETWEENTIME(600,1020)
					RETURN 0
				ELSE
					RETURN 5
				ENDIF
			;빈 방과 창고
			CASE 528, 531
				RETURN -100
			;마리사 집, 엘렌가, 요괴의 사는 곳
			CASE 511 TO 515, 535, 536, 537, 541, 542, 543, 544
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 2, 5
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 21,22,23, 51 TO 57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

