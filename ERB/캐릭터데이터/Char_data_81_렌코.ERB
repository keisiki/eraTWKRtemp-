@CHARAMOVE_DATA_81(ARG,ARG:2)
LOCAL = 81
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
		;연동 처리(메리의 것이 높을 때는 메리를 참조)
		IF TALENT:82:연모 || (TALENT:82:사모 && !TALENT:81:사모)
			CFLAG:LOCAL:현재위치 = CFLAG:82:만난위치 ?  CFLAG:82:만난위치 # SUKIMA()
		ELSE
			CFLAG:LOCAL:현재위치 = CFLAG:81:만난위치 ?  CFLAG:81:만난위치 # SUKIMA()
		ENDIF
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;사람이 있는 집의 목욕탕이라든지 화장실에는 가지 않는다
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 43, 44, 51, 52
				RETURN -100
			;개인 방에는 못 들어간다
			CASE 15, 17, 19, 53, 55
				SIF FLAG:15 != LOCAL
					RETURN -100
			;창고 등을 찾아다니고 싶다
			CASE 6, 17, 19, 51, 53
				RETURN 5
			;낡은오두막때는 오히려 간다
			CASE 16
				SIF FLAG:15 == 82
					RETURN 5
				SIF FLAG:15 == 81
					RETURN 0
				SIF FLAG:15
					RETURN -100
				RETURN 5
			;유적에 자주 간다
			CASE 26 TO 51
				RETURN 5
			;자기 방, 메리의 방, 광장
			CASE 232, 233, 202
				RETURN 5
			;당신의 방
			CASE 230
				IF TALENT:LOCAL:연모
					RETURN 5
				ELSE
					RETURN -100
				ENDIF
			;가지 않는다
			CASE 220, 225, 221, 222, 224, 226
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 1, 2, 4, 6
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,3,4,6, 12,13,15, 21,22,23,27, 41,42,43, 61,62
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

