@CHARAMOVE_DATA_16(ARG,ARG:2)
LOCAL = 16
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		;6시~18시는 자고 있다, 최근의 아가씨는 섬머 타임제등이라고 해 기상·취침시간을 늦추고 있습니다.
		IF DAY:2 == 2
			CFLAG:16:취침시간 = 300
			CFLAG:16:기상시간 = 1140
		ELSEIF DAY:2 == 4
			CFLAG:16:취침시간 = 420
			CFLAG:16:기상시간 = 1020
		ELSE
			CFLAG:16:취침시간 = 360
			CFLAG:16:기상시간 = 1080
		ENDIF
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;아가씨이므로 일단 사람이 있는 집의 목욕탕이라든지 화장실에는 가지 않는다
			CASE 12, 13, 14, 18, 30, 35, 39, 40, 51
				RETURN -100
			;헛간과 저택 밖으로는 나오지 않고, 빈 방에도 가지 않는다
			CASE 304, 305, 321, 329, 330, 334 TO 348
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 3
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4, 34 TO 38
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

