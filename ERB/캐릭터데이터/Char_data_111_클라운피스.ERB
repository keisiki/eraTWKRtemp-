@CHARAMOVE_DATA_111(ARG,ARG:2)
LOCAL = 111
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;綿月亭には行かない
			CASE 1022 TO 1049
				RETURN -100
			;出るとき用
			CASE 1020, 1021
				RETURN -10
			;静かの海は渡らない
			CASE 1001 TO 1015
				RETURN -100
			;二階はあまり行かない
			CASE 1070 TO 1072
				RETURN -5
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 0, 2, 6, 10
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 1,2,4,5, 21,22,23, 61,62,67, 109
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

