@CHARAMOVE_DATA_74(ARG,ARG:2)
LOCAL = 74
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
	;이동 확률
	CASE 2
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;호숫가, 레티, 치르노, 안개의호수에 가기 쉽다
			CASE 343, 344, 345, 347
				RETURN 5
			;헛간과 저택의 3층과 지하, 및 각개인 방에는 못 들어간다
			CASE 303, 304, 305, 311, 312, 318, 320, 321, 323, 325, 340, 341, 342, 348
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 3, 5
				RETURN 1
			CASE 2
				SIF DAY:2 == 4
					RETURN 1
				RETURN 0
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 21,22,23, 31,32,34, 51,53,56,57
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

