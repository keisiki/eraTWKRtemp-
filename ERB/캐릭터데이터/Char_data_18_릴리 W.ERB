@CHARAMOVE_DATA_18(ARG,ARG:2)
LOCAL = 18
SELECTCASE ARG
	;이동 대상 멤버 체크
	CASE 1
		RETURN 0
	;이동 확률
	CASE 2
		;악천후시, 밖이라면 이동하기 쉽고
		SIF OUTROOF(CFLAG:(NO:18):현재위치) && ((TIME:5 & 4) || (TIME:5 & 8))
			RETURN 10
		RETURN 80
	;기상시간대
	CASE 3
		RETURN 수면시간(LOCAL)
	;이동 경향
	CASE 4
		SELECTCASE ARG:2
			;삼요정 집에 가기 쉽다
			CASE 26 TO 34
				RETURN 5
			;아지트, 액가, 슈우카, 카센가, 은둔지, 오두막
			CASE 704, 706, 715 TO 719, 720 TO 730, 733, 734
				RETURN -100
		ENDSELECT
	;일시간대
	CASE 5
	;가는 지역(0=박1=사2=리3=호4=죽5=삼6=명7=산8=수9=지10=월)
	CASE 6
		SELECTCASE ARG:2
			CASE 2
				SIF DAY:2 == 1
					RETURN 1
				RETURN 0
			CASE 3, 5, 7
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
	;출현 장소
	CASE 7
		SELECTCASE ARG:2
			CASE 21,22,23, 31,32,33,34, 51 TO 55, 71,72,73
				RETURN 1
			CASEELSE
				RETURN 0
		ENDSELECT
ENDSELECT

