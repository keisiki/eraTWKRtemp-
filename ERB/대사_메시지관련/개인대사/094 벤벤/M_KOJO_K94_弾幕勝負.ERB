;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K94_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:대사색깔
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「잡는다…！」
		ELSEIF RAND:4 == 0
			PRINTFORMW 「 나의 실력, 보여 주어요！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「 나의 상대가 될까？」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「너의 상대는 이 나야！」
		ELSE
			PRINTFORMW 「 나의 음악의 상대가 될까♪」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「이…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「 아직 끝나지 않아요！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「스쳤을 뿐！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「이 정도에서는！」
				ELSE
					PRINTFORMW 「응, 아직도！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「깜찍하다！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「내가 추적할 수 있고 있다！？」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「의외로 하는이 아닌거야」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「 이제(벌써) 후가…」
				ELSE
					PRINTFORMW 「적당히 가라앉으세요！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「…바보…！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…당했어요」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「졌군요…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「그런…」
				ELSE
					PRINTFORMW 「…강하다」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「사람에게 싸움을 파는 버릇에 약하거든」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「이것으로 나의 천하에 한 걸음 가까워졌는지 해들？」
				ELSEIF RAND:3 == 0
					PRINTFORM 「뭐야, 약있고 것,
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「-응, 의외로 별일 아니다」
				ELSE
					PRINTFORMW 「이것으로 끝나？맥 빠짐이군요」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「애먹게 해 주어 버려서…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…노우 미스와는 가지 않았어요…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「응, 이마이치 오를 수 없었어요」
				ELSEIF RAND:2 == 0
					PRINTFORM 「,
					CALL MASTER_CALLNAME_K94
					PRINTFORMW , 진심 냈다？」
				ELSE
					PRINTFORMW 「 좀 더 나를 즐겁게 하기를 원했다」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「힘들다…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「조금 더 하면 질 상황이었던 원…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K94
					PRINTFORMW …의외로 해요…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…통…」
				ELSE
					PRINTFORMW 「아직도 강림나에는 멀까…」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「싫어요,
					CALL MASTER_CALLNAME_K94
					PRINTFORMW ,…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「응, (가)온 (가)온, 항복이야―」
				ELSEIF RAND:3 == 0
					PRINTFORM 「유석
					CALL MASTER_CALLNAME_K94
					PRINTFORMW , 무료자가 아니네요…」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「 나는 이길 수 없는가…」
				ELSE
					PRINTFORMW 「이번은 야츠하시도 데려 올까？」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

