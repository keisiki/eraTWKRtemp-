;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K95_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②ダイスロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、キャラが被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に戻る→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
SIF FLAG:대사색깔
	TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;ハンデをつけることができ、数値が大きいほどあなたが不利になる　数値が負ならあなたが有利に
	;キャラの能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		;怒り
		IF CFLAG:318 == 1
			PRINTFORMW 「앗 왔다！싸움 판 것 후회시켜 주기 때문에！」
		ELSEIF RAND:4 == 0
			PRINTFORM 「원오- 있고！승부야！
			CALL MASTER_CALLNAME_K95
			PRINTFORMW ！」
		ELSEIF RAND:3 == 0
			PRINTFORMW 「 나의 음악에서의 해 주기 때문에！」
		ELSEIF RAND:2 == 0
			PRINTFORMW 「일본신도의 의례 라이브의 시작되어 시작―！」
		ELSE
			PRINTFORMW 「도구이니까는 얕잡아 보지 말아！」
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;別に一律で「やられたー」だけでもいいよ
		SELECTCASE 相手残機
			;残り残機3が表示されるのは【洽覧深識】持ちのみ
			CASE 3
				PRINTFORML 
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「거치지 않아！이런 건으로 했다고 생각하지 말아！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「통！이제(벌써)！상냥하게 해！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「이 정도！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「우연 당은！」
				ELSE
					PRINTFORMW 「아직도！지금부터！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「―, 이대로는…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「끼리야…이대로는 져버린다！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「 나래…할 때 유행하기 때문에！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「승부는 지금부터！」
				ELSE
					PRINTFORMW 「단념하지 않기 때문에！」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 의 바보-！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「…」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「와~, 이건 무리이다―」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「…」
				ELSE
					PRINTFORMW 「…안된가…」
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
	
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上ならあなたの負け、0の場合はあなたの勝利
		SELECTCASE 相手残機
			CASE 4
				PRINTFORML 
			CASE 3
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「어때！분명하게 사과해요！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「했다―！이길 수 있었다！」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW , 상태 나빴어？」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「후후응, 어떤 것이야！」
				ELSE
					PRINTFORMW 「 좀 더 씹는 맛을 갖고 싶었어요」
				ENDIF
			CASE 2
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「거치지 않아！지지 않기 때문에！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「아- 이제(벌써)！머리카락 흐트러져 버렸다！」
				ELSEIF RAND:3 == 0
					PRINTFORMW 「있고 있어…찰과상 입어 버렸다…」
				ELSEIF RAND:2 == 0
					PRINTFORM 「,
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 도 그저 강하네요！」
				ELSE
					PRINTFORMW 「좋은 승부였던 원！」
				ENDIF
			CASE 1
				;怒り
				IF CFLAG:318 == 1
					PRINTFORMW 「아…위험했다…」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「위험했다…」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW , 강한데―」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「격투였던 원이군요…지쳤다…」
				ELSE
					PRINTFORMW 「신승은 녀석…」
				ENDIF
			CASE 0
				;怒り
				IF CFLAG:318 == 1
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW 정말 싫다！」
				ELSEIF RAND:4 == 0
					PRINTFORMW 「응, (가)온 (가)온, 항복이야―」
				ELSEIF RAND:3 == 0
					PRINTFORM 「
					CALL MASTER_CALLNAME_K95
					PRINTFORMW , 강하구나！」
				ELSEIF RAND:2 == 0
					PRINTFORMW 「분한데…」
				ELSE
					PRINTFORMW 「언니와 태그 짜 리벤지 해요！」
				ENDIF
		ENDSELECT
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

