	RETURN -1
SIF DAY:3 >= 30
	RETURN -1

CALL DAILY_EV24
RETURN 1

@DAILY_EV24
PRINTFORMW 계절 이변이다！
FOR LOCAL,1,CHARANUM
	IF TALENT:LOCAL:요정
		CALL BUFF_BASE(LOCAL,BASE_체력,300)
		CALL BUFF_BASE(LOCAL,BASE_기력,300)
	ENDIF
