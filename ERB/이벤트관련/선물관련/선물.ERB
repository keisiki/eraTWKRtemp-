;-------------------------------------------------
;선물데이터를 추출하는 함수
;-------------------------------------------------
@GET_GIFTDATA(GIFT_ID, ARGS)
#FUNCTION
#DIM GIFT_ID
SELECTCASE ARGS
CASE "횟수"
	RETURNF GIFT_ID / 10000000000000000
CASE "득점"
	RETURNF GIFT_ID / 10000000000000 % 1000
CASE "날짜"
	RETURNF GIFT_ID / 1000000000 % 10000
CASE "장소"
	RETURNF GIFT_ID / 10000000 % 100
CASE "형용사"
	RETURNF GIFT_ID / 1000 % 10000
CASE "본체"
	RETURNF GIFT_ID % 1000
ENDSELECT

