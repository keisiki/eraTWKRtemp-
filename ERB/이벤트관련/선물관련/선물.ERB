@GIFT_DATE_CHECK(CHARA)
#FUNCTION
#DIM CHARA
#DIM 上限
#DIM 発生率
;祭日でないなら上限80%
IF FESTIVAL() == ""
	上限 = 80
ELSE
	上限 = 100
ENDIF

;모브코
SIF TALENT:CHARA:스침
	RETURNF 0
;すでに渡している
SIF DAY == GET_GIFTDATA(CFLAG:CHARA:건네준선물, "날짜")
	RETURNF 0
;前回の贈り物から一週間以上経ってる(祭日を除く）
SIF DAY - GET_GIFTDATA(CFLAG:CHARA:건네준선물, "날짜") < 7 && FESTIVAL() == ""
	RETURNF 0
;반발각인,언짢음,분노
SIF MARK:CHARA:반발각인 || TALENT:CHARA:기분 < 0 || CFLAG:CHARA:빡침
	RETURNF 0
;무드1220未満
SIF BASE:CHARA:무드 < 1220
	RETURNF 0

;친밀5以降から친밀1につき5%上昇
発生率 = (ABL:CHARA:친밀 - 4) * 5
;祭日なら1.5倍
SIF FESTIVAL() != ""
	TIMES 発生率, 1.5
;연인なら1.5倍
SIF TALENT:CHARA:연인
	TIMES 発生率, 1.5
;発生率%で発生
SIF MIN(発生率, 上限) > RAND:100
	RETURNF 1
RETURNF 0

