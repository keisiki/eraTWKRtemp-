@CHILD_NAME(YOME)
#DIM YOME
#DIM CHILDNUM
#DIMS PROPOSED_NAME, 10
CHILDNUM = EXP:YOME:출산경험 % 10
SIF !EXP:YOME:출산경험 % 10
	CHILDNUM = 10
IF CHILD_SEX:YOME:CHILDNUM == 1
	PROPOSED_NAME:0 = %랜덤캐릭터_명명(YOME)%
ELSE
	PROPOSED_NAME:0 = %남자아이_명명(YOME, CHILDNUM)%
ENDIF
$LOOP0
PRINTL 아이의 이름을 결정합시다
PRINTFORML 
CALL ASK_M("스스로 결정한다",1, "랜덤 후보 보기",1, @"%CALLNAME:YOME%의 제안에 따라 「%PROPOSED_NAME:0%」라 이름짓자",1)
;CALL ASK_M("스스로 결정한다",1,"랜덤 후보 보기",1,"「멕시코에 부는 열풍!」이라는 뜻의 「산타나」라 하는 건 어떨까!",1)
SELECTCASE RESULT
	CASE 0
		$LOOP1
		PRINTL 아이의 이름을 입력해 주세요
		INPUTS
		IF RESULTS == ""
			GOTO LOOP1
		ELSE
			PROPOSED_NAME:0 = %RESULTS%
			CALL CHK_CHILDNAME_DUPLICATION(PROPOSED_NAME:0)
			PRINTFORML %조사처리(PROPOSED_NAME:0,"로")% 괜찮겠습니까?
			CALL ASK_YN
			IF RESULT
				GOTO LOOP1
			ELSE
				CHILDNAME:YOME:CHILDNUM = %PROPOSED_NAME:0%
			ENDIF
		ENDIF
	CASE 1
		$LOOP2
		FOR LOCAL,1,10
			IF CHILD_SEX:YOME:CHILDNUM == 1
				PROPOSED_NAME:LOCAL = %랜덤캐릭터_명명(YOME)%
			ELSE
				PROPOSED_NAME:LOCAL = %남자아이_명명(YOME, CHILDNUM)%
			ENDIF
			PRINTFORML [{LOCAL}] - %PROPOSED_NAME:LOCAL%
		NEXT
		DRAWLINE
		PRINTFORML [99] - 후보 재생성
		PRINTFORML [100] - 돌아간다
		$LOOP3
		INPUT
		SELECTCASE RESULT
			CASE 1 TO 9
				LOCAL = RESULT
				CALL CHK_CHILDNAME_DUPLICATION(PROPOSED_NAME:LOCAL)
				PRINTFORML %조사처리(PROPOSED_NAME:LOCAL,"로")% 괜찮겠습니까?
				CALL ASK_YN
				IF RESULT
					GOTO LOOP0
				ELSE
					CHILDNAME:YOME:CHILDNUM = %PROPOSED_NAME:LOCAL%
				ENDIF
			CASE 99
				GOTO LOOP2
			CASE 100
				GOTO LOOP0
			CASEELSE
				GOTO LOOP3
		ENDSELECT
	CASE 2
		;PRINTFORML 화가 난 %조사처리(CALLNAME:YOME,"가")% 이름을 정해버렸다…
		PRINTFORML %조사처리(CALLNAME:YOME,"는")% 기쁜 듯이 자식을 부르고 있다
		CHILDNAME:YOME:CHILDNUM = %PROPOSED_NAME:0%
ENDSELECT

PRINTFORML %조사처리(CHILDNAME:YOME:CHILDNUM,"라")%는 이름이 되었습니다
TALENT:YOME:육아중 = CHILDNUM
