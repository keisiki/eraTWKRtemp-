@CHK_HAVE_CHILD(ARG,ARG:1,ARG:2)
#FUNCTION
#DIM 연령
SIF !CFLAG:ARG:육아인원수
	RETURNF 0

FOR LOCAL, 1, 11
	연령 = DAY - CHILD_BIRTHDAY:ARG:LOCAL
	SIF INRANGE(연령,ARG:1,ARG:2-1)
		RETURNF LOCAL
NEXT

RETURNF 0
